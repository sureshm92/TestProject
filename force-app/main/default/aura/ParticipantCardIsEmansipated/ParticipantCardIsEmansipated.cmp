<aura:component description="ParticipantCardIsEmansipated">

    <!-- attributes: -->
    <aura:attribute name="pe" type="Object"/>
    <aura:attribute name="parent" type="Aura.Component"/>
    <aura:attribute name="needEmancipationProcess" type="Boolean" default="false"/>

    <!-- handlers: -->
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>


    <!-- component body:-->
    <aura:if isTrue="{!v.needEmancipationProcess}">
        <div style="background: #FFF7EC; fill: white; height: 100%; color: black; line-height: 45px; font-size: 1rem; border: 0.1px solid; border-color: lightgrey;">
            <span style="padding: 4px 16px; font-weight: 600;"><c:RRIcon iconName="warning"/> One or more participants has reached the age of legal majority. Please confirm privacy preferences with participant(s).</span>
            <span style="padding: 4px 16px;"><a href="javascript:void(0);">Update Privacy Preferences</a></span>
        </div>
    </aura:if>

</aura:component>
