                </aura:if>-->

            </aura:if>
        </div>
            <aura:set attribute="headerButtons">
                <lightning:button onclick="{!c.doPrint}" name="Print" class="{!'slds-button slds-button--icon-inverse'}">
                    <c:RRIcon iconName="icon-print" class="print-icon"/>
                </lightning:button>
            </aura:set>
            <aura:set attribute="footerButtons">
                <lightning:button class="apollo-btn secondary slds-float_right slds-button--neutral" onclick="{!c.doUpdateCancel}">{!$Label.c.BTN_Save_All_Tabs}</lightning:button>
                <aura:if isTrue="{!v.checkTabs == 'participantDetails'}">
                <lightning:button class="apollo-btn secondary slds-float_left" onclick="{!c.doUpdate}">{!$Label.c.PG_MTI_BTN_Save_Changes}</lightning:button>
                </aura:if>
                <lightning:button class="apollo-btn secondary slds-float_right slds-button--reset" onclick="{!c.doCancel}">{!$Label.c.BTN_Cancel}</lightning:button>
            </aura:set>
    </c:Popup>
</aura:component>