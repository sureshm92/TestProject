<aura:component description="ResourceContainer" implements="forceCommunity:availableForAllPageTypes">

	<ltng:require styles="{!join(',', $Resource.rr_community_css, $Resource.proximanova + '/proximanova.css')}"
				  scripts="{!join(',', $Resource.rr_community_js)}"/>


	<!--Possible values are "Default", "Favorite", "Suggested"-->
	<aura:attribute name="resourceMode" type="String" default="Default"/>

	<lightning:layout horizontalAlign="center" class="width-limiter">
		<lightning:layoutItem flexibility="auto" size="6">
			<c:Resource resourceType="Video" resourceMode="{!v.resourceMode}"/>
		</lightning:layoutItem>
		<lightning:layoutItem flexibility="auto" size="6" class="resource-right">
			<c:Resource resourceType="Article" resourceMode="{!v.resourceMode}"/>
		</lightning:layoutItem>
	</lightning:layout>
	<div class="resource-disclaimer">
		{!$Label.c.Resources_Expiration_Date_Disclaimer}
	</div>
</aura:component>