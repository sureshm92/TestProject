<aura:component description="RRIconSplitter">

    <!--attributes-->
    <aura:attribute name="value" type="String"/>
    <aura:attribute name="hideMoreThan3" type="Boolean" default="false"/>
    <aura:attribute name="icons" type="List" access="private"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <div class="icons">
        <aura:iteration items="{!v.icons}" var="icon">
            <c:RRIcon iconName="{!icon}" class="icon-item"/>
        </aura:iteration>
        <aura:if isTrue="{!v.hideMoreThan3}">
            <div class="dots">...</div>
        </aura:if>
    </div>

</aura:component>
