 <aura:component description="DelegateLevelInfoTable">
    <!-- attributes: -->
    <aura:attribute name="activeSections" type="List" default="['A','C']" />
    
    <aura:attribute name="userMode" required="true" type="String"/>
    <aura:attribute name="capList" required="false" access="private" type="Object[]"/>
    <aura:attribute name="header" required="false" access="private" type="Object"/>
    
    <!-- handlers: -->
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <!-- component body-->
    <aura:if isTrue="{!not(v.userMode == 'Participant')}" >
        <div class="dlit-container">
            <table class="dlit-table">
                <tr>
                    <th>
                        <span>
                            {!v.header.text}
                        </span>
                    </th>
                    <aura:iteration items="{!v.header.levels}" var="level">
                        <th>
                            <span>{!level}</span>
                        </th>
                    </aura:iteration>
                </tr>
                <aura:iteration items="{!v.capList}" var="capability">
                    <tr>
                        <td>
                            <span>
                                {!capability.text}
                            </span>
                        </td>
                        <aura:if isTrue="{!not(v.userMode == 'Participant')}" >
                            <aura:iteration items="{!capability.levels}" var="level">
                                <td>
                                    <aura:if isTrue="{!level}">
                                        <lightning:icon class="greenIcon" iconName="utility:check" size="xx-small"/>
                                    </aura:if>
                                    <aura:if isTrue="{!not(level)}">
                                        <span>
                                            -
                                        </span>
                                    </aura:if>
                                </td>
                            </aura:iteration>
                        </aura:if>
                    </tr>
                </aura:iteration>
            </table>
        </div></aura:if>
    <aura:if isTrue="{!(v.userMode == 'Participant')}" >
        <lightning:accordion allowMultipleSectionsOpen="true"
                             onsectiontoggle="{! c.handleSectionToggle }" activeSectionName="{! v.activeSections }" >
            <lightning:accordionSection name="B" label="{!$Label.c.PP_DelegateTasks}">
                <aura:iteration items="{!v.capList}" var="capability">
                    <span>
                        <ul>
                            <li>{!capability.text}</li>
                        </ul>
                    </span></aura:iteration>
            </lightning:accordionSection></lightning:accordion>
        
    </aura:if>
</aura:component>