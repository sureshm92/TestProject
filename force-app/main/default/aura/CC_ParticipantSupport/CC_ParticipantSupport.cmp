<aura:component controller='CC_ParticipantSupportRemote' implements="forceCommunity:availableForAllPageTypes" access="global">
    <ltng:require scripts="{!join(',', $Resource.rr_community_js)}" afterScriptsLoaded="{!c.doInit}"/>
    <!-- CREATE ATTRIBUTE/VARIABLE-->
    <aura:attribute name="searchResult" type="List"/>
    <aura:attribute name="searchKeyword" type="String"/>
    <aura:attribute name="parent" type="Aura.Component"/>
    <aura:attribute name="Message" type="boolean" default="false"/>
    <aura:attribute name="pe" type="Object" description="Participant enrollment item"/>
    <aura:attribute name="peobj" type="Object" description="Participant enrollment item"/>
    <aura:attribute name="isInvited" type="Boolean"/>
    <aura:attribute name="actions" type="Object" default="true" />
  
    <div>
        <div class="slds-grid slds-wrap" style="padding-bottom:18px;">
            <div class="slds-col slds-size--5-of-12">
                <div class="slds-form-element__control slds-input-has-icon slds-input-has-icon_left slds-icon-text-default">
                    <lightning:icon class="slds-icon slds-input__icon slds-input__icon_left slds-icon-text-default" iconName="utility:search" size="x-small"/>
                    <input class="slds-input" placeholder="{!$Label.c.CC_search_for_a_participant}" type="text" id="searchTxt" 
                           value="{!v.searchKeyword}" />
                </div>
            </div>
            <div class="slds-col slds-size--5-of-12" style="padding-left: 25px;">
                <lightning:button label="Search" onclick="{! c.Search }"/>
            </div>
        </div> 
        
        <!-- TABLE CONTENT-->
        <div class="rr-white-panel db-qal-container">
            <div class="db-qal-main">
                <div class="db-qal-items slds-grid slds-wrap">                    
                    <div class="slds-coll slds-size--4-of-12" ></div>
                    
                    <table class="slds-table slds-table_bordered slds-max-medium-table_stacked-horizontal slds-table_fixed-layout slds-float_right" >
                        <thead class="div-container">
                            <tr class="slds-line-height_reset">
                                <td><div class="" scope="col">{!$Label.c.CC_Name}</div></td>
                                <td><div class="" scope="col">{!$Label.c.CC_Phone_Number}</div></td>
                                <td><div class="" scope="col">{!$Label.c.CC_Phone_Type}</div></td>
                                <td><div class="" scope="col">{!$Label.c.CC_Study}</div></td>
                                <td><div class="" scope="col">{!$Label.c.CC_PI_Name}</div></td>
                                <td><div class="" scope="col">{!$Label.c.CC_Study_Site}</div></td>
                                <td><div class="" scope="col">{!$Label.c.CC_Site_Contact}</div></td>
                                <td class="wraptext"><div class="" scope="col">{!$Label.c.CC_Site_Phone_Number}</div></td>
                                <td><div class="" scope="col">{!$Label.c.CC_Received}</div></td>
                            </tr>
                        </thead>
                        <aura:iteration items="{!v.searchResult}" var="PE" indexVar="index">                   
                            <tr>                        
                                <td><div class="slds-truncate wraptext"><lightning:button variant="base" name="{!index}" value="{!PE.Participant__r.Id}" label="{!PE.Participant__r.Full_Name__c}" onclick="{!c.showEditParticipantInformation}"/>
                                    </div></td>
                                <td><div class="slds-truncate wraptext">{!PE.Participant__r.Phone__c}</div></td>
                                <td><div class="slds-truncate wraptext">{!PE.Participant__r.Phone_Type__c}</div></td>
                                <td><div class="slds-truncate wraptext">
                                    <c:RRLink class="study-title" label="{!PE.Clinical_Trial_Profile__r.Study_Code_Name__c}"
                                              page="{!'study-workspace?id=' + PE.Clinical_Trial_Profile__r.Id}"/>
                                    </div></td>
                                <td><div class="slds-truncate wraptext">{!PE.PI_Contact__r.Name}</div></td>
                                <td><div class="slds-truncate wraptext">{!PE.Study_Site__r.Name}</div></td>
                                <td><div class="slds-truncate wraptext">{!PE.Participant_Contact__r.Name}</div></td>
                                <td><div class="slds-truncate wraptext">{!PE.Study_Site__r.Study_Site_Phone__c}</div></td>
                                <td><div class="slds-truncate wraptext">{!PE.Days_After_Referred__c} days ago</div></td>
                            </tr>
                        </aura:iteration>		
                    </table>  
                    
                    <c:Action_ParticipantInformation aura:id="OpenPatientInfoAction" NotCCMode="false" isValid="true" />
                </div>
            </div>
        </div>
        
    </div>
</aura:component>