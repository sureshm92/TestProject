<aura:component description="FunnelChart">
    <ltng:require styles="{!$Resource.funnel_library_css}"/>
    <ltng:require styles="{!$Resource.funnel_library_theme_css}"/>
    <ltng:require scripts="{!$Resource.funnel_library_js}" afterScriptsLoaded="{!c.doInit}"/>

    <aura:attribute name="funnelData" type="Object"/>
    <aura:attribute name="invitedParticipants" type="Integer"/>

    <aura:handler value="{!v.funnelData}" name="change" action="{!c.doInit}"/>

    <div class="funnel-dashborad-container">
        <div class="funnel-dashboard-name">
            <div>{!$Label.c.Referral_Pathway_Label}</div>
            <div>{!v.invitedParticipants + ' ' + $Label.c.Participants_Referred_Label}</div>
        </div>
        <div class="flex">
                <div aura:id="funnelContainer" class="funnel">
                </div>
        </div>
    </div>
</aura:component>