<aura:component description="DashboardQuickActionList">

    <!-- attributes: -->
    <aura:attribute name="itemsList" type="List"/>
    <aura:attribute name="parent" type="Aura.Component"/>
    <aura:attribute name="itemsType" type="String" description="participantsWaitingAcceptance/hcpWaitingApproval"/>
    <aura:attribute name="title" type="String"/>
    <aura:attribute name="viewMoreLink" type="String"/>
    <div class="rr-white-panel db-qal-container">
        <div class="db-qal-main">
            <div class="db-qal-title">
                {!v.title}
            </div>
            <div class="db-qal-items">
                <aura:iteration items="{!v.itemsList}" var="item">
                    <aura:if isTrue="{!v.itemsType == 'participantsWaitingAcceptance'}">
                        <c:DashboardParticipantCard pe="{!item}" parent="{!v.parent}"/>
                    </aura:if>
                    <aura:if isTrue="{!v.itemsType == 'hcpWaitingApproval'}">
                        <c:DashboardHCPCard hcpe="{!item}" parent="{!v.parent}"/>
                    </aura:if>
                </aura:iteration>
            </div>
        </div>
        <div class="dqa-view-more">
            <c:RRLink page="{!v.viewMoreLink}" class="apollo-btn text">{!$Label.c.BTN_View_all}</c:RRLink>
        </div>
    </div>

</aura:component>
