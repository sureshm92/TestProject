<aura:component controller="ConditionOfInterestRemote" description="ConditionOfInterestListView">
    <aura:attribute name="conditionOfInterestList" type="Object[]"/>
    <aura:attribute name="isSaveList" type="Boolean"/>
    <aura:attribute name="showSpinner" type="Boolean" default=""/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:handler name="change" value="{!v.isSaveList}" action="{!c.doSaveSortCOIs}"/>

    <c:RRSpinner aura:id="spinner" showSpinner="{!v.showSpinner}"/>
    <div class="slds-size--1-of-2 slds-max-small-size--1-of-1 slds-medium-size--1-of-1 slds-x-small-size--1-of-1 size slds-large-size--1-of-2 slds-p-right--small">
        <div class="slds-grid slds-wrap">
            <div style="width: 100%">
            <aura:if isTrue="{!!empty(v.conditionOfInterestList)}">
                <aura:iteration items="{!v.conditionOfInterestList}" var="coi" indexVar="arrayInd">
                    <div class="slds-col slds-size_1-of-1 slds-medium-size_1-of-1">
                        <div class="slds-pill slds-container--fluid">
                            <div class="slds-pill__label slds-p-left--medium">{!coi.coi.Therapeutic_Area__r.Name}</div>
                            <div class="slds-float--right">

                                <lightning:buttonIcon iconName="utility:up" variant="bare"
                                                      size="small" onclick="{!c.doUp}"
                                                      alternativeText="up"
                                                      value="{!arrayInd}"
                                                      class="{!arrayInd == 0 ? 'slds-hidden' : ''}"
                                />

                                <lightning:buttonIcon iconName="utility:down" variant="bare"
                                                      size="small" onclick="{!c.doDown}"
                                                      alternativeText="down"
                                                      value="{!arrayInd}"
                                                      class="{!v.conditionOfInterestList.length == (arrayInd + 1) ? 'slds-hidden' : ''}"
                                />

                                <lightning:buttonIcon iconName="utility:close"  variant="bare"
                                                      size="large" onclick="{!c.doDelete}"
                                                      title="close"
                                                      alternativeText="Delete COI"
                                                      value="{!coi.coi.Id}"
                                />
                            </div>
                        </div>
                    </div>
                </aura:iteration>
                <aura:set attribute="else">
                    <div class="slds-pill slds-container--fluid">
                        <div class="slds-pill__label slds-p-left--medium slds-color__text_gray-5">{!$Label.c.PG_COI_L_No_conditions_selected}</div>
                    </div>
                </aura:set>
            </aura:if>
            </div>
            <div class="slds-col slds-size_1-of-1 slds-medium-size_1-of-1">
                <button class="apollo-btn secondary slds-m-top--medium slds-p-bottom--medium" id="0"
                        onclick="{!c.doSelect}">
                    {!$Label.c.PG_COI_L_Select_Conditions}
                </button>
            </div>
        </div>
    </div>
    <c:SearchConditionsOfInterest aura:id="searchModal" conditionsOfInterest="{!v.conditionOfInterestList}" isSaveList="{!v.isSaveList}"/>
</aura:component>