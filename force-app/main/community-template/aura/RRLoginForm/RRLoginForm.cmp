 <aura:component description="RRLoginForm" implements="forceCommunity:availableForAllPageTypes" controller="RRLoginRemote">
    <ltng:require styles="{!join(',', $Resource.Community_CSS_Core, $Resource.Community_CSS_Stub, $Resource.proximanova + '/proximanova.css')}"
                  scripts="{!$Resource.rr_community_js}" afterScriptsLoaded="{!c.initialize}"/>


    <aura:attribute name="showError" type="Boolean" required="true" description="" default="false" access="private"/>
    <aura:attribute name="errorMessage" type="String" required="false" description="" access="private"/>
    <aura:attribute name="startUrl" type="String" required="false" description="The url you go to after a successful login" />
    <aura:attribute name="usernameLabel" type="String" required="false" default="{!$Label.c.PG_Login_F_User_Name}"/>
    <aura:attribute name="passwordLabel" type="String" required="false" default="{!$Label.c.PG_Login_F_Password}"/>
    <aura:attribute name="loginButtonLabel" type="String" required="false" default="{!$Label.c.BTN_Log_In}"/>
    <aura:attribute name="expid" type="String" required="false" description="The branding experience ID" />
	<!-- added by Sumit S REF-510-->
	<aura:attribute name="showpassword" type="Boolean" default="false" />

    <aura:attribute name="forgotPasswordLabel" type="String" required="false" default="{!$Label.c.PG_Login_L_Forgot_your_password}"/>
    <aura:attribute name="selfRegisterLabel" type="String" required="false" default="{!$Label.c.PG_Login_L_Not_a_member}"/>
    <aura:attribute name="forgotPasswordUrl" type="String" required="false" default="/ForgotPassword"/>
    <aura:attribute name="selfRegisterUrl" type="String" required="false" default="/SelfRegister"/>

    <aura:attribute name="isUsernamePasswordEnabled" type="Boolean" access="private"/>
    <aura:attribute name="isSelfRegistrationEnabled" type="Boolean" access="private"/>
    <aura:attribute name="communityForgotPasswordUrl" type="String" access="private"/>
    <aura:attribute name="communitySelfRegisterUrl" type="String" access="private"/>

    <aura:attribute name="paddingTop" type="String" access="private" default="40px"/>
    <aura:attribute name="isOpen" type="boolean" default="false"/> <!-- Added by Krishna Mahto - PEH-1910 -->
    <aura:attribute name="isGSKCommunity" type="boolean" default="false"/> <!-- Added by Krishna Mahto - PEH-1910 -->
    <aura:attribute name="ieClass" type="String" access="private" default=""/>

    <aura:registerevent name="sitePropagatedStartUrl" type="c:setStartUrl"/>
    <aura:dependency resource="c:setStartUrl" type="EVENT"/>
    <!-- Please uncomment -->
    <aura:dependency resource="siteforce:registerQueryEventMap" type="EVENT"/>
    <!-- -->
    <aura:handler event="c:setStartUrl" action="{!c.setStartUrl}"/>
    <aura:handler event="c:setExpId" action="{!c.setExpId}"/>
    <aura:dependency resource="c:setExpId" type="EVENT"/>

    <div style="{!'padding-top: ' + v.paddingTop}">
        <aura:renderIf isTrue="{!v.isUsernamePasswordEnabled}">
            <span>
                <aura:renderIf isTrue="{!v.showError}">
                    <div class="lg-error-alert">
                        <ui:outputRichText value="{!'ERROR: ' + v.errorMessage}"/>
                    </div>
                </aura:renderIf>
            </span>
            <div class="{!'lg-form-element ' + v.ieClass}">
                <label>{!$Label.c.PG_Login_F_User_Name}</label>
                <!--<ui:inputText value="" aura:id="username" keyup="{!c.onKeyUp}" class="input sfdc_usernameinput sfdc" label="{!v.usernameLabel}" labelClass="assistiveText"/>-->
					<span onkeyup="{!c.onKeyUp}" id="username">
						<lightning:input
							aura:id="username"
							class="input sfdc_usernameinput sfdc" 
							value=""/> 
					</span>
            </div>

            <div class="{!'lg-form-element ' + v.ieClass}">
                <label>{!$Label.c.PG_Login_F_Password}</label>
                <!--<ui:inputSecret value="" aura:id="password" keyup="{!c.onKeyUp}" class="input sfdc_passwordinput sfdc" label="{!v.passwordLabel}" labelClass="assistiveText"/>-->
				<!-- added by Sumit S REF-510-->
				<div>
					<span onkeyup="{!c.onKeyUp}" id="password">
						<lightning:input label="{!v.passwordLabel}"
							variant="label-hidden"
							aura:id="password"    
							class="input sfdc_usernameinput sfdc" type="{!v.showpassword ? 'text' : 'password'}" 
							value=""/> 
					</span>
					 <lightning:buttonIcon class="input sfdc_usernameinput sfdc eyeIcon" 
									iconName="{!v.showpassword ? 'utility:hide':'utility:preview'}" 
									alternativeText="{!v.coborrowerSSNCB ? 'Hide':'Show'}" 
									onclick="{!c.togglePassword}"/>
				</div>
            </div>

            <div style="height: 50px; margin-top: 30px">
                <button class="apollo-btn primary login" onclick="{!c.handleLogin}" style="width: 100%">{!$Label.c.BTN_Log_In}</button>
            </div>

            <div id="sfdc_forgot" class="slds-align_absolute-center"> <!-- Added By Krishna for PEH-1910- Aligned to center  -->
                <span><a class="forgot-password-link" onclick = "{!c.resetUrl}">{!$Label.c.PG_Login_Link_Forgot}</a></span>
                <aura:renderIf isTrue="{!v.isSelfRegistrationEnabled}">
                    <span style="float:right" ><a href="{!if(v.communitySelfRegisterUrl == null, v.selfRegisterUrl, v.communitySelfRegisterUrl)}">{!v.selfRegisterLabel}</a></span>
                </aura:renderIf>
            </div>
            <!-- Added By Krishna for PEH-1910 :Start  --> 
            <br/>
             <!--**************************Modal used for unable to Login Help for GSK *************** -->
            <aura:if isTrue="{!v.isGSKCommunity}">
                <div class="SFDC-Modal">
                    <div id="sfdc_unalbe_to_Login" class="slds-align_absolute-center ">
                        <p><a class="forgot-password-link" onclick="{!c.openModel}">{!$Label.c.PG_Unable_To_Login}</a></p>  
                    </div>
                    <aura:if isTrue="{!v.isOpen}">
                        <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
                            <div class="slds-modal__container">
                                <div class=" bg-color-gsk slds-modal__content slds-p-around_medium" id="modal-content-id-2">
                                    <div style="{!'padding-top: ' + v.paddingTop}">
                                        <span>
                                            <aura:renderIf isTrue="{!v.showError}">
                                                <div class="lg-error-alert">
                                                    <ui:outputRichText value="{!'ERROR: ' + v.errorMessage}"/>
                                                </div>
                                            </aura:renderIf>
                                        </span>
                                        
                                        <div  class="slds-m-horizontal--">
                                           <div id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate slds-align_absolute-center"><b>{!$Label.c.PG_Unable_To_Login}</b></div>
                                            <br/>                      
                                            <div id="sfdc_unableLogin" ><b>{!$Label.c.PG_Unable_To_Login_L1}</b></div>
                                            <div id="sfdc_unableLogin">{!$Label.c.PG_Unable_To_Login_L2}                                 
                                                <span><a aura:id="toggleCSS" 
                                                         class="SFDC_links-gsk"
                                                         onclick = "{!c.resetUrl}">
                                                    &nbsp;{!$Label.c.PG_Login_Link_Forgot}
                                                    </a>
                                                </span>
                                                <aura:renderIf isTrue="{!v.isSelfRegistrationEnabled}">
                                                    <span style="float:right" ><a href="{!if(v.communitySelfRegisterUrl == null, v.selfRegisterUrl, v.communitySelfRegisterUrl)}">{!v.selfRegisterLabel}</a></span>
                                                </aura:renderIf>
                                                &nbsp; {!$Label.c.PG_Unable_To_Login_L3}
                                            </div>
                                            <br/>
                                            <div id="sfdc_unableLogin" ><b>{!$Label.c.PG_Unable_To_Login_L4}</b></div>
                                            <div id="sfdc_unableLogin" >{!$Label.c.PG_Unable_To_Login_L5}&nbsp;
                                                <a aura:id="toggleCSS" class="SFDC_links-gsk" href="mailto:support@mail.clinicalresearch.com " >{!$Label.c.PG_Unable_To_Login_L6}
                                                </a>&nbsp;{!$Label.c.PG_Unable_To_Login_L7}
                                            </div>
                                            <br/>
                                            <div id="sfdc_unableLogin" ><b>{!$Label.c.PG_Unable_To_Login_L8}</b></div>
                                            <div id="sfdc_unableLogin" >{!$Label.c.PG_Unable_To_Login_L9}&nbsp;
                                                <a aura:id="toggleCSS" class="SFDC_links-gsk" href="mailto:support@mail.clinicalresearch.com " >{!$Label.c.PG_Unable_To_Login_L6}
                                                </a>&nbsp;{!$Label.c.PG_Unable_To_Login_L10}
                                            </div>
                                            <br/><br/>
                                            <div class="slds-align_absolute-center">
                                            <button class="apollo-btn primary login" onclick="{!c.closeModel}" style="width: 50%">{!$Label.c.BTN_Cancel}</button> 
                                            </div>
                                        </div> 
                                    </div>
                                </div>
                            </div>
                            <br/><br/>
                        </section>
                        <div class="slds-backdrop slds-backdrop_open"></div> 
                    </aura:if>  
                </div>
                <aura:set attribute="else">
                    <!--**************************Modal used for unable to Login Help for RH *************** -->
                    <div class="SFDC-Modal">
                        <div id="sfdc_unalbe_to_Login" class="slds-align_absolute-center ">
                            <p><a class="forgot-password-link" onclick="{!c.openModel}">{!$Label.c.PG_Unable_To_Login}</a></p>  
                        </div>
                        <aura:if isTrue="{!v.isOpen}">
                            <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
                                <div class="slds-modal__container">                
                                   <div class=" bg-color-rh slds-modal__content slds-p-around_medium" id="modal-content-id-2">
                                        <div style="{!'padding-top: ' + v.paddingTop}">
                                            <span>
                                                <aura:renderIf isTrue="{!v.showError}">
                                                    <div class="lg-error-alert">
                                                        <ui:outputRichText value="{!'ERROR: ' + v.errorMessage}"/>
                                                    </div>
                                                </aura:renderIf>
                                            </span>
                                            
                                            <div  class="slds-m-horizontal--">
                                                <div id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate slds-align_absolute-center"><b>{!$Label.c.PG_Unable_To_Login}</b></div>
                                                <br/>                      
                                                <div id="sfdc_unableLogin" ><b>{!$Label.c.PG_Unable_To_Login_L1}</b></div>
                                                <div id="sfdc_unableLogin">{!$Label.c.PG_Unable_To_Login_L2}                                 
                                                    <span><a aura:id="toggleCSS" 
                                                             class="SFDC_links-rh"
                                                             onclick = "{!c.resetUrl}">
                                                        &nbsp;{!$Label.c.PG_Login_Link_Forgot}
                                                        </a>
                                                    </span>
                                                    <aura:renderIf isTrue="{!v.isSelfRegistrationEnabled}">
                                                        <span style="float:right" ><a href="{!if(v.communitySelfRegisterUrl == null, v.selfRegisterUrl, v.communitySelfRegisterUrl)}">{!v.selfRegisterLabel}</a></span>
                                                    </aura:renderIf>
                                                    &nbsp; {!$Label.c.PG_Unable_To_Login_L3}
                                                </div>
                                                <br/>
                                                <div id="sfdc_unableLogin" ><b>{!$Label.c.PG_Unable_To_Login_L4}</b></div>
                                                <div id="sfdc_unableLogin" >{!$Label.c.PG_Unable_To_Login_L5}&nbsp;
                                                    <a aura:id="toggleCSS" class="SFDC_links-rh" href="mailto:support@mail.clinicalresearch.com " >{!$Label.c.PG_Unable_To_Login_L6}
                                                    </a>&nbsp;{!$Label.c.PG_Unable_To_Login_L7}
                                                </div>
                                                <br/>
                                                <div id="sfdc_unableLogin" ><b>{!$Label.c.PG_Unable_To_Login_L8}</b></div>
                                                <div id="sfdc_unableLogin" >{!$Label.c.PG_Unable_To_Login_L9}&nbsp;
                                                    <a aura:id="toggleCSS" class="SFDC_links-rh" href="mailto:support@mail.clinicalresearch.com " >{!$Label.c.PG_Unable_To_Login_L6}
                                                    </a>&nbsp;{!$Label.c.PG_Unable_To_Login_L10}
                                                </div>
                                                <br/><br/>
                                                <div class="slds-align_absolute-center">
                                                <button class="apollo-btn primary login " onclick="{!c.closeModel}" style="width: 50%">{!$Label.c.BTN_Cancel}</button> 
                                                </div>
                                            </div> 
                                        </div>
                                    </div>
                                </div>
                                <br/><br/>
                            </section>
                            <div class="slds-backdrop slds-backdrop_open"></div>
                        </aura:if>  
                    </div>
                </aura:set>
            </aura:if> 
    	<!-- Added By Krishna for PEH-1910 :End  --> 
            <!-- Added By Krishna for PEH-2451 :Start  --> 
            <br/>
            <div id="sfdc_forgot" class="slds-align_absolute-center"> 
                <span style="float:right" ><a  href="{!$Label.c.CommunityURL + '/s/privacy-policy'}">{!$Label.c.Email_Footer_Privacy_Policy}</a></span>
            </div>
            <br/>
			<!-- Added By Krishna for PEH-2451 :End  --> 
            <div class="rr-login-info-title" style="margin-top: 40px">{!$Label.c.PG_Login_T_This_Site_Optimized_For}</div>

        </aura:renderIf>
    </div>

</aura:component>
