<aura:component
    description="Lofi_LoginThemeLayout"
    implements="forceCommunity:themeLayout"
    extends="c:CheckLanguage"
>
    <ltng:require
        styles="{!join(',', $Resource.Community_CSS_Core, $Resource.Community_CSS_PP_Theme, $Resource.proximanova + '/proximanova.css')}"
        scripts="{!join(',', $Resource.rr_community_js)}"
        afterScriptsLoaded="{!c.doInit}"
    />
    <aura:attribute name="title" type="String" />
    <aura:attribute name="subTitle" type="String" />
    <aura:attribute name="communityType" type="String" />
    <aura:attribute name="isRTL" type="Boolean" default="false" />
    <aura:attribute name="isMobileView" type="Boolean" default="false" />
    <aura:attribute name="isMobileApp" type="Boolean" default="false" />
    <aura:attribute name="showPpPopup" type="Boolean" default="false" />
    <aura:attribute name="cookieText" type="String" />

    <aura:if isTrue="{!v.languageChecked}">
        <div class="body-content slds-grid slds-wrap body-image">
            <img
                class="body-img"
                src="{!$Resource.PP_DesktopLogos + '/Doctor_checks_patients_breathing.jpg'}"
            />
            <div class="slds-col slds-size_1-of-1 login-card">
                <div class="wave slds-show_small">
                    <img class="" src="{!$Resource.PP_DesktopLogos + '/wave_desktop.png'}" />
                </div>
                <div class="wave slds-hide_small">
                    <img class="" src="{!$Resource.PP_DesktopLogos + '/wave_mobile.png'}" />
                </div>
                <div class="slds-grid slds-grid_align-center">
                    <div class="slds-col slds-size_1-of-1 login-form-layout">
                        <div>
                            <span class="iqvia-txt">IQVIA</span>
                            <span class="patient-portal-txt">Patient Portal</span>
                        </div>
                        <div class="body-content">
                            <div class="body-components">{!v.body}</div>
                        </div>
                    </div>
                </div>
                <div class="slds-grid slds-wrap footer">
                    <div class="slds-col slds-size_1-of-1 slds-text-align_center footer-logo">
                        <img src="{!$Resource.PP_DesktopLogos + '/iqvia_logo.svg'}" />
                    </div>
                    <div class="slds-col slds-text-align_center footer-powered">
                        <span class="footer-label"
                            >Powered by IQVIA Â© 2022. All rights reserved.</span
                        >
                    </div>
                </div>
            </div>
        </div>

        <c:ppCookiesBanner isRTL="{!v.isRTL}" loginPage="true" />
    </aura:if>
</aura:component>
