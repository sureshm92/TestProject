<aura:component description="BlankThemeLayout" implements="forceCommunity:themeLayout">
    <ltng:require
        styles="{!join(',', $Resource.Community_CSS_Core, $Resource.Community_CSS_Default_Theme, $Resource.proximanova + '/proximanova.css')}"
        scripts="{!join(',', $Resource.rr_community_js)}"
        afterScriptsLoaded="{!c.doInit}"
    />
    <aura:attribute name="isRTL" type="Boolean" />
    <!-- component body: -->
    <div
        class="all-content"
        style="{!'background-image: linear-gradient(135deg, #25095b 0%,#176ba4 100%);'}"
    >
        <div
            class="body-cell"
            style="{!if(v.isRTL == true, '/* @noflip */  direction: rtl;overflow-x: hidden;', '')}"
        >
            <div class="logo-block">
                <div class="rr-small-down-hide slds-grid slds-wrap">
                    <div class="wave slds-show_small">
                        <img src="{!$Resource.PP_DesktopLogos + '/wave_desktop.png'}" class="imgMargins"/>
                    </div>
                </div>
                <div class="page-content"> 
                    <lightning:layout multipleRows="true">

                        <lightning:layoutItem size="12" class="mb-16">
                            <p class="iqvia"> {!$Label.c.RH_Masked_IQVIA_User} <span class="patient-portal">{!$Label.c.Community_PP}</span></p>
                        </lightning:layoutItem>

                        <lightning:layoutItem size="12" class="mb-16">
                            <p class="for-participants-c">{!$Label.c.OptOut_PP_Subheader}</p>
                        </lightning:layoutItem>

                        <lightning:layoutItem size="12" class="cusContentMargin">
                            <div class="body-components">{!v.body}</div>
                        </lightning:layoutItem>

                        <lightning:layoutItem size="12" class="footerOptOut">                                                    
                            <span class="poweredBy">{!$Label.c.PP_Powered_by_Footer}</span>                           
                            <span> <img src="{!$Resource.PP_DesktopLogos + '/iqvia_logo.svg'}" /></span>
                        </lightning:layoutItem>                       

                    </lightning:layout>
                </div>
            </div>
        </div>
    </div>
</aura:component>