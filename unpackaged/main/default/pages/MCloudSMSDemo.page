<apex:page id="MCloudSMSDemo" controller="MCloudSMSDemoController" showHeader="true">
            <apex:sectionHeader title="Demo case for sending SMS messages from short number {!shortCode} using Marketing Cloud API" />
            <apex:form id="theForm">
                <apex:pageBlock id="block">
                    <apex:pageMessages escape="false" />

                    <apex:inputText value="{!testPhone}" style="width:100px; height:20px; color:blue; font-family:monospace;"/>
                    &nbsp;&nbsp;&nbsp;
                    <apex:selectList value="{!keyword}" size="1" style="height:20px; text-align:left;">
                        <apex:selectOptions value="{!keywordOptions}"/>
                    </apex:selectList>
                    &nbsp;&nbsp;&nbsp;
                    <apex:inputText value="{!outboundMessage}" style="width:500px; height:20px; color:blue; font-family:monospace;"/>
                    &nbsp;&nbsp;&nbsp;
                    <apex:commandButton id="send" value="Send" action="{!sendMessage}" style="width:100px; height:24px;" reRender="theForm"/>

                </apex:pageBlock>
            </apex:form>
</apex:page>