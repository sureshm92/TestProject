<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Active_Days_Not_Negative</fullName>
    <active>true</active>
    <errorConditionFormula>AND 
(NOT( ISBLANK(  Active_After_Days__c  ) ), 
 Active_After_Days__c &lt; 0 
)</errorConditionFormula>
    <errorMessage>Please enter zero or positive value on &quot;Active after (days)&quot;</errorMessage>
</ValidationRule>
