<aura:component description="ConditionsOfInterestView" controller="ConditionsOfInterestViewRemote">

    <aura:attribute name="taps" type="Object[]"/>
    <aura:attribute name="searchResults" type="Object[]"/>
    <aura:attribute name="filterText" type="String" default=""/>
    <aura:attribute name="participantId" type="String"/>

    <aura:registerEvent name="updateSearchEvent" type="c:UpdateConditionsOfInterestSearchEvt"/>


    <div class="slds-grid slds-wrap">
        <div style="width: 100%">
            <aura:if isTrue="{!!empty(v.taps)}">
                <aura:iteration items="{!v.taps}" var="coi" indexVar="arrayInd">
                    <lightning:input type="checkbox" label="{!coi.Therapeutic_Area__r.Name}"/>
                </aura:iteration>
            </aura:if>
            <!--Search for another condition-->
            <div class="slds-form-element">
                <div class="slds-form-element__control">
                    <div class="slds-combobox_container">
                        <div class="slds-combobox slds-dropdown-trigger slds-dropdown-trigger_click"
                             aura:id="searchContainer"
                             aria-expanded="false"
                             aria-haspopup="listbox"
                             role="combobox">
                            <!--Search field-->
                            <div class="slds-combobox__form-element slds-input-has-icon slds-input-has-icon_right" role="none"
                                 onfocusin="{!c.onFocusIn}"
                                 onfocusout="{!c.onFocusOut}">
                                <lightning:input label="" type="text" aura:id="search" autocomplete="off" placeholder="Search for anoter condition" onchange="{!c.doSearch}"/>
                            </div>
                            <!--Dropdown-->
                            <div id="listbox-id-1" class="slds-dropdown slds-dropdown_length-5 slds-dropdown_fluid" role="listbox">
                                <ul class="slds-listbox slds-listbox_vertical" role="presentation">
                                    <aura:iteration items="{!v.searchResults}" var="searchItem">
                                        <li role="presentation" class="slds-listbox__item">
                                            <div class="slds-media slds-listbox__option slds-listbox__option_plain slds-media_small" role="option"
                                                 id="{!searchItem.Id}" onclick="{!c.handleSelection}">
                                                <span class="slds-media__figure slds-listbox__option-icon"></span>
                                                <span class="slds-media__body">
                                                <span class="slds-truncate" title="{!searchItem.Name}">{!searchItem.Name}</span>
                                            </span>
                                            </div>
                                        </li>
                                    </aura:iteration>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--Enrollment Status Area-->
            <div>
                <lightning:input aura:id="enrolling" type="checkbox" label="Enrolling" checked="true"/>
                <lightning:input aura:id="notYetEnrolling" type="checkbox" label="Not yet enrolling" checked="true"/>
            </div>

            <div>
                <lightning:button variant="neutral" onclick="{!c.updateSearchResults}" value="Update Search Results" label="Update Search Results"/>
            </div>
        </div>
    </div>



</aura:component>
