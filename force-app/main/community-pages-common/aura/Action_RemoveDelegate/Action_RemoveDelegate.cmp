<aura:component description="Action_RemoveDelegate">

    <!-- attributes:-->
    <aura:attribute name="callback" type="Object"/>
    <aura:attribute name="messageText" type="String"/>

    <!-- methods:-->
    <aura:method name="execute" action="{!c.doExecute}" access="public">
        <aura:attribute name="messageText" type="String"/>
        <aura:attribute name="callback" type="Function"/>
    </aura:method>

    <!-- component body:-->
    <c:Popup aura:id="deleteDelegateDialog" title="{!$Label.c.PG_PST_L_Delegates_Remove_Delegate}" size="small">
        <c:RRSpinner aura:id="spinner"/>
        {!v.messageText}
        <aura:set attribute="footerButtons">
            <button class="apollo-btn primary" onclick="{!c.doYes}">{!$Label.c.BTN_Yes}</button>
            <button class="apollo-btn tertiary" onclick="{!c.doNo}">{!$Label.c.BTN_No}</button>
        </aura:set>
    </c:Popup>

</aura:component>
