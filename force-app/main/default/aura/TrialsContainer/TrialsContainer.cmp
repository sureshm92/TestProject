<aura:component description="TrialsContainer">
    <aura:attribute name="TrialTDOs" type="List"/>

    <aura:if isTrue="{!v.TrialTDOs}">
        <aura:iteration items="{!v.TrialTDOs}" var="trial">
            <div class="card-ctp">
                <div class="{!trial.isGreenLine ? ' top-line' : ''}"></div>
                <div style="padding: 5px 20px 5px 10px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                    Therapeutic area :
                    <aura:if isTrue="{!trial.cois}">
                        <aura:iteration items="{!trial.cois}" var="coi">
                            {!coi.Name},
                        </aura:iteration>
                    </aura:if>
                </div>
                <div style="height: 1px;background: #848484;"></div>
                <div style="padding: 5px 20px 5px 10px; display: flex;">
                    <div style="font-weight: bold; font-size: 17px; width: 90%">
                        {!trial.ctp.Study_Code_Name__c}
                    </div>
                    <aura:if isTrue="{!trial.ctp.Recruitment_Status__c}">
                        <div style="font-size: 14px; width: 20%; text-align: right">
                            {!trial.ctp.Recruitment_Status__c}
                        </div>
                    </aura:if>
                </div>
                <div style="font-size: 14px;padding: 5px 20px 5px 10px">{!trial.ctp.Official_Title__c}</div>
                <button class="apollo-btn primary button-ctp">
                    Button
                </button>
            </div>

        </aura:iteration>

    </aura:if>
</aura:component>
