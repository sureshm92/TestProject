<aura:component description="Library" implements="forceCommunity:availableForAllPageTypes" access="global">

    <aura:attribute name="detailsExpanded" type="Boolean" default="true"/>

    <aura:handler name="init"  value="{!this}" action="{!c.doInit}"/>


    <c:RRSpinner aura:id="mainSpinner" size="medium" showSpinner="true" fixed="true"/>
    <c:RRNavigationPath>
        <c:RRNPathItem label="{!$Label.c.Navigation_Resources}"/>
        <c:RRNPathItem label="{!$Label.c.Navigation_Library}"/>
    </c:RRNavigationPath>
    <div class="rr-white-panel">
        <div class="slds-card__header-title">{!$Label.c.Navigation_Library}</div>
        <div class="slds-grid slds-wrap slds-p-horizontal_medium">
            <a href="javascript:void(0);"
               class="{!(v.detailsExpanded == true ? 'expanded-icon hidden-icon ': 'expanded-icon ') + 'rr-link'}"
               onclick="{!c.toggleResourceView}">
                <c:RRIcon iconName="icon-chevron-right" class="icon-chevron-right-library"/>
                <span class="slds-m-right--xx-small">{!$Label.c.Non_Study_Specific}</span>
            </a>
        </div>
    </div>
</aura:component>