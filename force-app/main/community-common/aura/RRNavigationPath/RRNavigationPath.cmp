<aura:component description="RRNavigationPath" extends="c:CommunityContext">
 
    <!-- component body: -->
    <div class="{!'navigation-path ' + if(v.isRTL, 'rtl', '')}">
        <aura:if isTrue="{!!empty(v.body)}">
            <aura:iteration items="{!v.body}" var="navItem" indexVar="ind">
                {!navItem}
            </aura:iteration>
        </aura:if>
    </div>

</aura:component>