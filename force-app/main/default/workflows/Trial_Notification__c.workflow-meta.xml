<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Send_alert_about_CTP_become_enrolled</fullName>
        <description>Send alert about CTP become enrolled</description>
        <protected>false</protected>
        <recipients>
            <field>Contact__c</field>
            <type>contactLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Referral_Hub_Emails/Trial_Alert_Match</template>
    </alerts>
    <alerts>
        <fullName>Trial_Alert_received_by_IQVIA</fullName>
        <ccEmails>verdanis.aa@gmail.com</ccEmails>
        <description>Trial Alert received by IQVIA</description>
        <protected>false</protected>
        <senderType>CurrentUser</senderType>
        <template>Referral_Hub_Emails/Trial_Alert_Received</template>
    </alerts>
    <rules>
        <fullName>Alert received</fullName>
        <actions>
            <name>Trial_Alert_received_by_IQVIA</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Contact.Email</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>CTP become Enrolled</fullName>
        <actions>
            <name>Send_alert_about_CTP_become_enrolled</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Trial_Notification__c.Need_To_Send_Alert__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
