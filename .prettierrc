{
  "trailingComma": "none",
  "useTabs": true,
  "singleQuote": true,
  "htmlWhitespaceSensitivity": "ignore",
  "jsxBracketSameLine": true,
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": { "parser": "lwc" }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": {
        "parser": "html"
      }
    }
  ]
}
