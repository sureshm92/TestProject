<messaging:emailTemplate subject="{!$Label.Email_Subject_Welcome_To_The_Study_Del}"
                         recipientType="Contact"
                         relatedToType="Participant_Enrollment__c"
                         language="{!recipient.Language__c}">

    <messaging:htmlEmailBody>
        <c:EmailWireframe recipientId="{!recipient.Id}"
                          sourceId="{!relatedTo.Id}"
                          header="{!$Label.Email_Header_Welcome_to_Study_Delegate}"
                          greeting="{!$Label.Email_User_Greeting_FirstName}"
                          signature="{!$Label.Email_Signature_New_Short}"
                          communityTemplate="{!IF(relatedTo.Participant_Enrollment__r.Clinical_Trial_Profile__r.CommunityTemplate__c == 'Janssen',
                                                                                         'Janssen',relatedTo.Participant_Enrollment__r.Clinical_Trial_Profile__r.CommunityTemplate__c)}">
            <c:Paragraph emailLabel="{!$Label.Email_Body_Welcome_to_Study_Delegate}"/>
            <c:EmailActionBtn buttonLabel="{!$Label.Email_Action_Login_now}"/>
        </c:EmailWireframe>
    </messaging:htmlEmailBody>

    <messaging:plainTextEmailBody>
        <c:EmailWireframeText recipientId="{!recipient.Id}"
                              sourceId="{!relatedTo.Id}"
                              header="{!$Label.Email_Header_Welcome_to_Study_Delegate}"
                              greeting="{!$Label.Email_User_Greeting_FirstName}"
                              signature="{!$Label.Email_Signature_New_Short}"
                              communityTemplate="{!IF(relatedTo.Participant_Enrollment__r.Clinical_Trial_Profile__r.CommunityTemplate__c == 'Janssen',
                                                                                         'Janssen',relatedTo.Participant_Enrollment__r.Clinical_Trial_Profile__r.CommunityTemplate__c)}">
            <c:ParagraphText emailLabel="{!$Label.Email_Body_Welcome_to_Study_Delegate}"/>
            <c:EmailActionBtnText buttonLabel="{!$Label.Email_Action_Login_now}"/>
        </c:EmailWireframeText>
    </messaging:plainTextEmailBody>

</messaging:emailTemplate>