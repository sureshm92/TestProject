<aura:component description="ReferringClinicItem">
    <!--=============================================================================================================-->
    <aura:attribute name="clinicWrapper"                type="Object" required="true"/>
    <aura:attribute name="parent"                       type="Aura.Component"/>
    <aura:attribute name="ssId"                         type="String"/>
    <!--=============================================================================================================-->
    <aura:attribute name="enrollmentsByStudy" type="List"/>
    <!--=============================================================================================================-->
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <!--=============================================================================================================-->

    <div class="rci-main-container">

        <div class="rci-header">

            <div  class="rci-name">{!v.clinicWrapper.hcpContact.Salutation + ' ' + v.clinicWrapper.hcpContact.FirstName + ' ' + v.clinicWrapper.hcpContact.LastName + ' ' + (v.clinicWrapper.hcpContact.Is_First_Logon__c ? '('+ $Label.c.Not_Registered +')' : '')}</div>
            <div class="rci-info">
                <div class="rci-inline">
                    <span class="info-labels">{!$Label.c.Account_Name}:</span>
                    {!v.clinicWrapper.hcpContact.Account.Name+ ' '}
                    <span class="info-labels">{!$Label.c.PG_RSS_L_Address}:</span>
                        {! if(v.clinicWrapper.hcpContact.Account.BillingStreet == null,'',v.clinicWrapper.hcpContact.Account.BillingStreet + ' ')}
                        {! if(v.clinicWrapper.hcpContact.Account.BillingCity == '','',v.clinicWrapper.hcpContact.Account.BillingCity + ' ')}
                        {! if(empty(v.clinicWrapper.hcpContact.Account.BillingPostalCode),'',v.clinicWrapper.hcpContact.Account.BillingPostalCode + ' ')}
                </div>
                <div class="rci-inline"><span class="info-labels">{!$Label.c.PG_RSS_L_Phone}:</span>{!v.clinicWrapper.hcpContact.Account.Phone}</div>
            </div>
        </div>

        <aura:iteration items="{!v.enrollmentsByStudy}" var="item" indexVar="index">

            <div class="rci-study-name">{!item.studyName}</div>
            <aura:iteration items="{!item.enrollments}" var="enrollment" indexVar="ind">
                <c:ReferringClinicEnrollmentItem enrollmentData="{!enrollment}" isLastElement="{!v.enrollmentsByStudy.length == index+1 &amp;&amp; item.enrollments.length == ind +1}" parent="{!v.parent}"/>
            </aura:iteration>
        </aura:iteration>
    </div>

</aura:component>