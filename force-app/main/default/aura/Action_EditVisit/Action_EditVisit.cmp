<aura:component description="Action_EditVisit">

    <aura:attribute name="visit" type="Object" default="{}"/>
    <aura:attribute name="icons" type="List"/>
    <aura:attribute name="mode" type="String"/>
    <aura:attribute name="callback" type="Object"/>
    <aura:attribute name="cancelCallback" type="Object"/>

    <aura:method name="execute" action="{!c.doExecute}">
        <aura:attribute name="visit" type="Object"/>
        <aura:attribute name="callback" type="Function"/>
        <aura:attribute name="cancelCallback" type="Function"/>
    </aura:method>

    <c:uiModal aura:id="modal" size="medium" headerText="{!if(v.mode == 'new', 'Add Visit', 'Edit Visit')}">
        <div>
            <div class="slds-grid slds-gutters">
                <div class="slds-col slds-size--1-of-2">
                    <lightning:input type="text" label="Visit Name" value="{!v.visit.Name}"/>
                </div>
                <div class="slds-col slds-size--1-of-2">
                    <lightning:input type="text" label="Patient Portal Name"
                                     value="{!v.visit.Patient_Portal_Name__c}"/>
                </div>
            </div>
            <div class="slds-grid slds-gutters">
                <div class="slds-col slds-size--1-of-2">
                    <lightning:input type="text" label="Visit Schedule" value="{!v.visit.Visit_Schedule__c}"/>
                </div>
                <div class="slds-col slds-size--1-of-2">
                    <lightning:input type="number" label="Visit Number" value="{!v.visit.Visit_Number__c}"/>
                </div>
            </div>
            <c:VisitIconsSection aura:id="iconsSet" icons="{!v.icons}" visit="{!v.visit}"/>
        </div>
        <aura:set attribute="footer">
            <lightning:button variant="neutral" type="button" label="{!$Label.c.BTN_Cancel}"
                              onclick="{!c.cancelClick}"/>
            <lightning:button variant="brand" type="button" label="Add Visit"
                              disabled="{!or(empty(v.visit.Name), empty(v.visit.Icons__c))}"
                              onclick="{!c.saveVisit}"/>
        </aura:set>
    </c:uiModal>

</aura:component>
