<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Due_date_for_weekly_task</fullName>
    <active>false</active>
    <errorConditionFormula>AND(Recurrence_End_Date__c -  Start_Date__c &lt; 7, ISPICKVAL( Recurrence_Frequency__c , &apos;Weekly&apos;) )</errorConditionFormula>
    <errorMessage>This task cannot be scheduled for a weekly recurrence. Please modify the end date and try again.</errorMessage>
</ValidationRule>
