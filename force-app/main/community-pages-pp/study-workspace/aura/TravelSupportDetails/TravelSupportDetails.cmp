<aura:component description="TravelSupportDetails" controller="TravelSupportRemote">

    <ltng:require scripts="{!join(',', $Resource.rr_community_js)}" afterScriptsLoaded="{!c.doInit}"/>

    <aura:attribute name="travelWrapper" type="TravelSupportRemote.TravelWrapper[]"/>
    <aura:attribute name="currentTravels" type="TravelSupportRemote.TravelWrapper[]"/>
    <aura:attribute name="initialized" type="Boolean" default="false"/>
    <aura:attribute name="travelMode" type="String" default="All"/>
    <aura:attribute name="options" type="List"/>
    <aura:attribute name="vendors" type="Object[]"/>

    <!--    <aura:handler name="change" value="{!v.travelMode}" action="{!c.getTravels}"/>-->

    <c:RRSpinner aura:id="spinner" size="medium" showSpinner="true" fixed="true"/>
    <div class="{!'sv-body ' + if(v.initialized, '', 'hidden')}" data-gtm="PNL_Travel_Support_Details">
        <div class="tt-title">
            {!$Label.c.Home_Page_Travel_Support_Details_Tab}
        </div>
        <div class="select-container">
            {!$Label.c.Home_Page_StudyVisit_Show_Filter_Visits}
            <c:rrSelect value="{!v.travelMode}" options="{!v.options}" setValueAsSelected="All" class="select-list"
                        iconColor="#666666"/>
            <aura:if isTrue="{!!empty(v.vendors)}">
                <div class="slds-col--bump-left">
                    <c:uiHeaderMenu aura:id="menuId" class="mode-block" title="{!$Label.c.Home_Page_StudyVisit_Btn}">
                        <aura:set attribute="title">
                            <div class="apollo-btn primary slds-align-bottom" data-gtm="BTN_Add_New_Booking">
                                <div>{!$Label.c.Home_Page_StudyVisit_Btn}</div>
                                <c:RRIcon color="blue" iconName="icon-chevron-down" class="chevron"/>
                            </div>
                        </aura:set>
                        <aura:iteration items="{!v.vendors}" var="vendor">
                            <li class="sv-element" data-gtm="BTN_Link_Vendor">
                                <lightning:formattedUrl value="{!vendor.Link_Vendor__c}" label="{!vendor.Name}"/>
                            </li>
                        </aura:iteration>
                    </c:uiHeaderMenu>
                </div>
            </aura:if>
        </div>

        <ui:scrollerWrapper>
            <aura:if isTrue="{!!empty(v.travelWrapper)}">
                <c:RRTable>
                    <tr>
                        <th class="sv-t-visit" style="width: 10%">{!$Label.c.Home_Page_StudyVisit_Visit}</th>
                        <th class="sv-t-icons">{!$Label.c.Home_Page_Travel_Support_Bookings_Col}</th>
                        <th class="sv-t-status">{!$Label.c.Home_Page_Travel_Support_Booking_Status_Col}</th>
                        <th class="sv-t-date">{!$Label.c.Home_Page_Travel_Support_Booking_Date_Col}</th>
                        <th class="sv-t-time">{!$Label.c.Home_Page_Travel_Support_Booking_Time_Col}</th>
                        <th>{!$Label.c.Home_Page_Travel_Support_Action_Col}</th>
                    </tr>
                    <aura:iteration var="travelWrapper" items="{!v.currentTravels}">
                        <tr>
                            <td class="sv-t-visit">{!empty(travelWrapper.visitName)
                                ? $Label.c.StudyVisit_Unscheduled_Visit
                                : travelWrapper.visitName}</td>
                            <td class="sv-t-icons">
                                <div class="booking-cell">
                                    <div class="icon-item">
                                        <c:RRIcon class="icon-item svl-icon" iconName="{!travelWrapper.icon}"/>
                                    </div>
                                    <div style="padding-left: 3px">{!travelWrapper.title}</div>
                                </div>
                            </td>
                            <td class="sv-t-status">
                                <div class="booking-cell">
                                    <c:RRIcon class="icon-item svl-icon"
                                              iconName="{!if(travelWrapper.status == 'Confirmed', 'check-circle',
                                              if(travelWrapper.status == 'Failed', 'icon-close-circle',
                                              if(travelWrapper.status == 'Pending', 'icon-clock', '')))}"
                                              color="{!travelWrapper.bgc}"/>
                                    <div style="padding-left: 5px">
                                        {!if(travelWrapper.status == 'Confirmed', $Label.c.Home_Page_Travel_Support_Filter_Confirmed,
                                        if(travelWrapper.status == 'Failed', $Label.c.Home_Page_Travel_Support_Filter_Declined,
                                        if(travelWrapper.status == 'Pending', $Label.c.Home_Page_Travel_Support_Filter_Pending, '')))}</div>
                                </div>
                            </td>
                            <td class="sv-t-date">
                                <lightning:formattedDateTime value="{!travelWrapper.dateAndTime}"
                                                             year="numeric" month="2-digit" day="2-digit"/>
                            </td>
                            <td class="sv-t-time">
                                <aura:if isTrue="{!!travelWrapper.isAccommodation}">
                                    <lightning:formattedDateTime value="{!travelWrapper.dateAndTime}"
                                                                 hour="2-digit" minute="2-digit"/>
                                </aura:if>
                            </td>
                            <td class="sv-t-reminder">
                                <lightning:formattedUrl value="{!travelWrapper.link}" label="View Booking"/>
                            </td>
                        </tr>
                    </aura:iteration>
                </c:RRTable>
                <div class="pagination">
                    <c:rrPagination allObjects="{!v.travelWrapper}" currentObjects="{!v.currentTravels}"
                                    entriesOnPage="4"/>
                </div>
            </aura:if>

            <c:EmptyListStub class="no-travels-message" targetList="{!v.travelWrapper}" iconName="none"
                             message="{!$Label.c.PG_VP_L_No_Items_display}"/>
        </ui:scrollerWrapper>

        <aura:set attribute="else">
            <div class="error-message">{!$Label.c.PG_VP_L_No_Items_display}</div>
        </aura:set>
    </div>
</aura:component>
