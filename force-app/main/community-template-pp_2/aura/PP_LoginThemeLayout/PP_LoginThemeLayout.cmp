<aura:component
    description="PP_LoginThemeLayout"
    implements="forceCommunity:themeLayout"
    extends="c:CheckLanguage"
    controller="communityFooterController"
>
    <ltng:require
        styles="{!join(',', $Resource.Community_CSS_PP_Theme, $Resource.proximanova + '/proximanova.css')}"
        scripts="{!join(',', $Resource.rr_community_js)}"
        afterScriptsLoaded="{!c.doInit}"
    />
    <aura:attribute name="title" type="String" />
    <aura:attribute name="subTitle" type="String" />
    <aura:attribute name="communityType" type="String" />
    <aura:attribute name="isRTL" type="Boolean" default="false" />
    <aura:attribute name="isMobileView" type="Boolean" default="false" />
    <aura:attribute name="isMobileApp" type="Boolean" default="false" />
    <aura:attribute name="showPpPopup" type="Boolean" default="false" />
    <aura:attribute name="cookieText" type="String" />
    <aura:attribute name="isCPRAavailable" type="Boolean" default="false" />
    <aura:attribute name="CPRAlabel" type="String" />
    <aura:attribute name="CPRALinkToredirect" type="String" />
    <aura:attribute name="footerLabel" type="String" default="{!$Label.c.Footer_T_Copyright}" />
    <aura:attribute name="showCookiesBanner" type="Boolean" default="false" />

    <aura:if isTrue="{!v.languageChecked}">
        <div class="body-content slds-grid slds-wrap body-image slds-align_absolute-center">
            <img
                class="body-img"
                src="{!$Resource.PP_DesktopLogos + '/Doctor_checks_patients_breathing.jpg'}"
            />
            <div class="{!v.showCookiesBanner?'slds-col slds-size_1-of-1 login-cards':'slds-col slds-size_1-of-1 login-card'}" >
                <div class="wave slds-show_small">
                    <img src="{!$Resource.PP_DesktopLogos + '/wave_desktop.png'}" />
                </div>
                <div class="wave slds-hide_small">
                    <img src="{!$Resource.PP_DesktopLogos + '/wave_mobile.png'}" />
                </div>
                <div class="slds-grid slds-grid_align-center">
                    <div class="slds-col slds-size_1-of-1 login-form-layout">
                        <div>
                            <span class="iqvia-txt">IQVIA</span>
                            <span class="patient-portal-txt">Patient Portal</span>
                        </div>
                        <div class="body-content">
                            <div class="body-components">{!v.body}</div>
                        </div>
                    </div>
                </div>

                <div class="slds-grid slds-wrap footer">
                    <div
                        class="{!'slds-col slds-text-align_center footer-logo footerorientimage ' + if(v.isCPRAavailable == true,'slds-size_1-of-2', 'slds-size_1-of-1')}"
                    >
                        <img
                            src="{!$Resource.PP_DesktopLogos + '/iqvia_logo.svg'}"
                            class="footerorientpadding"
                        />
                    </div>
                    <aura:if isTrue="{!v.isCPRAavailable}">
                        <a
                            class="slds-col slds-size_1-of-2 pagelinkcss footer-logo footerOrientPrivacy"
                            onclick="{!c.onLinkClick}"
                            ><span class="container">
                                <span>{!v.CPRAlabel}</span>
                                <img src="{!$Resource.CCPA_icon}" class="imgclass" />
                                <img src="{!$Resource.CCPA_icon_hover}" class="overlay" />
                            </span>
                        </a>
                    </aura:if>
                    <div
                        class="slds-col slds-size_1-of-1 slds-text-align_center footer-powered slds-m-vertical_x-small"
                    >
                        <span class="footer-label"
                            >{!v.footerLabel}</span
                        >
                    </div>
                </div>
            </div>
        </div>
		 <aura:if isTrue="{!v.showCookiesBanner}">
        	<c:ppCookiesBanner isRTL="{!v.isRTL}" loginPage="true" communityName="PatientPortal" />
        </aura:if>    
    </aura:if>
</aura:component>