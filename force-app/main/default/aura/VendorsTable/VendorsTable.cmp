<aura:component description="VendorsTable">

    <aura:attribute name="vendors" type="Object[]"/>
    <aura:attribute name="hasDefault" type="Boolean"/>
    <aura:attribute name="selectedVendor" type="Object"/>

    <c:RRTable>
        <div class="slds-scrollable">
            <table class="slds-table ">
                <tbody>
                <aura:iteration var="vendor" items="{!v.vendors}" indexVar="ind">
                    <tr class="slds-hint-parent ">
                        <td onclick="{!c.redirectToLinka}" data-ind="{!vendor.TravelVendor__r.Link_Vendor__c}" >
                            <div class="slds-medium-show--inline-block  slds-m-left--xx-large">
                                <lightning:input aura:id="checkBoxBtn" type="checkbox" label="" onchange="{!c.makeUnique}" value="{!vendor}"/>
                            </div>
                            <div class="slds-medium-show--inline-block">
                                <p class="slds-text-align--center">{!vendor.TravelVendor__r.Name}</p>
                            </div>
                        </td>
                    </tr>
                </aura:iteration>
                </tbody>
            </table>
        </div>
    </c:RRTable>
</aura:component>
