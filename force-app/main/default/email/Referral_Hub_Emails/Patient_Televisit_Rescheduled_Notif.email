<messaging:emailTemplate subject="{!relatedTo.Title__c} {!$Label.Email_Subject_Televisit_Rescheduled}"
                         recipientType="Contact"
                         relatedToType="Televisit__c"
                         language="{!recipient.Language__c}">

    <messaging:htmlEmailBody >
        <c:EmailWireframe recipientId="{!recipient.Id}"
                          sourceId="{!relatedTo.Id}"
                          header="{!$Label.Email_Header_Televisit_Rescheduled}"
                          greeting="{!$Label.Email_User_Greeting_FirstName}"
                          signature="{!$Label.Email_Signature_Televisit_PT}"
                          communityTemplate="{!IF(relatedTo.Participant_Enrollment__r.Clinical_Trial_Profile__r.CommunityTemplate__c == 'Janssen','Janssen',relatedTo.Participant_Enrollment__r.Clinical_Trial_Profile__r.CommunityTemplate__c)}">
            <c:Paragraph emailLabel="{!$Label.Email_Body_Televisit_Rescheduled}"/>
            <c:EmailActionBtn buttonLabel="{!$Label.Email_Action_Login_now}"/>
        </c:EmailWireframe>
    </messaging:htmlEmailBody>

    <messaging:plainTextEmailBody >
        <c:EmailWireframeText recipientId="{!recipient.Id}"
                              sourceId="{!relatedTo.Id}"
                              header="{!$Label.Email_Header_Televisit_Rescheduled}"
                              greeting="{!$Label.Email_User_Greeting_FirstName}"
                              signature="{!$Label.Email_Signature_Televisit_PT}"
                              communityTemplate="{!IF(relatedTo.Participant_Enrollment__r.Clinical_Trial_Profile__r.CommunityTemplate__c == 'Janssen','Janssen',relatedTo.Participant_Enrollment__r.Clinical_Trial_Profile__r.CommunityTemplate__c)}">
            <c:ParagraphText emailLabel="{!$Label.Email_Body_Televisit_Rescheduled}"/>
            <c:EmailActionBtnText buttonLabel="{!$Label.Email_Action_Login_now}"/>
        </c:EmailWireframeText>
    </messaging:plainTextEmailBody>

</messaging:emailTemplate>