<aura:component description="ParticipantStatusDetailsCard">
    <aura:attribute name="stepWrapper" type="Object" required="true"/>
    <aura:attribute name="reasonList" type="List" access="private"/>
    <aura:attribute name="parent" type="Aura.Component" />
    <aura:attribute name="notesRequired" type="Boolean" default="false"/>
    <aura:handler name="change" value="{!v.stepWrapper.outcome}" action="{!c.updateReasonList}"/>
    <aura:handler name="change" value="{!v.stepWrapper.reason}" action="{!c.updateNotesRequired}"/>
    <div class="step-card-title">
            {!v.stepWrapper.cardTitle}
    </div>
    <aura:if isTrue="{!v.stepWrapper.editable}">
        <div class="step-form">
            <aura:if isTrue="{!!empty(v.stepWrapper.outcomeList)}">
                <div class="slds-wrap slds-grid slds-gutters">
                    <div class="slds-col slds-size--1-of-2 outcome-form-element">
                        <div class="label">{!$Label.c.PG_ACPE_L_Outcome}</div>
                        <c:rrSelect options="{!v.stepWrapper.outcomeList}" value="{!v.stepWrapper.outcome}"
                                    placeholder="{!v.stepWrapper.outcomePlaceholder}"/>
                    </div>
                    <div class="slds-col slds-size--1-of-2 outcome-form-element">
                        <div class="label">{!$Label.c.PG_ACPE_L_Reason}</div>
                        <c:rrSelect options="{!v.reasonList}" value="{!v.stepWrapper.reason}"
                                    placeholder="{!$Label.c.PG_RP_L_Not_selected}" disabled="{!empty(v.stepWrapper.outcome)}"/>
                    </div>
                    <div class="slds-col slds-size--1-of-1 outcome-form-element">
                        <lightning:input label="{!$Label.c.PG_ACPE_L_Notes+'('+if(v.notesRequired,$Label.c.PG_ACPE_L_required,$Label.C.PG_ACPE_L_optional)+')'}" type="text" value="{!v.stepWrapper.notes}"/>
                    </div>
                </div>
            </aura:if>
            <aura:iteration items="{!v.stepWrapper.formFieldGroups}" var="fieldsGroup">
                <aura:if isTrue="{!!empty(fieldsGroup.title)}">
                    <div class="field-group-title">{!fieldsGroup.title}</div>
                </aura:if>
                <div class="slds-grid slds-wrap slds-gutters">
                    <aura:iteration items="{!fieldsGroup.fields}" var="field">
                        <div class="{!'slds-col form-field ' + field.style }">
                            <aura:if isTrue="{!field.type=='text'}">
                                <lightning:input label="{!field.title}" type="text" value="{!field.value}" disabled="{!field.readonly}"/>
                            </aura:if>
                            <aura:if isTrue="{!field.type=='picklist'}">
                                <div class="label">{!field.title}</div>
                                <c:rrSelect options="{!field.values}" value="{!field.value}"
                                    placeholder="" disabled="{!field.readonly}"/>
                            </aura:if>
                            <aura:if isTrue="{!field.type=='date'}">
                                <lightning:input label="{!field.title}" type="date" value="{!field.value}" disabled="{!field.readonly}"/>
                            </aura:if>
                            <aura:if isTrue="{!field.type=='time'}">
                                <lightning:input label="{!field.title}" type="time" value="{!field.value}" disabled="{!field.readonly}"/>
                            </aura:if>
                        </div>
                    </aura:iteration>
                </div>
            </aura:iteration>
            <button class="apollo-btn secondary" onclick="{!c.doSaveChanges}" disabled="{!and(!empty(v.stepWrapper.outcomeList),empty(v.stepWrapper.outcome)||(and(v.notesRequired,empty(v.stepWrapper.notes))))}">
                {!$Label.c.RP_BTN_Save_Changes}
            </button>
        </div>
    </aura:if>
    <aura:if isTrue="{!v.stepWrapper.historyTitle != '' || !empty(v.stepWrapper.stepHistory)}">
        <div class="step-history">
            <div class="step-history-title">
                {!v.stepWrapper.historyTitle}
            </div>
            <div class="step-history-records">
                <aura:if isTrue="{!empty(v.stepWrapper.stepHistory)}">
                    {!$Label.c.None}
                    <aura:set attribute="else">
                        <aura:iteration items="{!v.stepWrapper.stepHistory}" var="history">
                            <div class="history-item">
                                <span class="history-item-title">{!history.title}</span>
                                <span class="history-item-detail">{!history.detail}</span>
                            </div>
                        </aura:iteration>
                    </aura:set>
                </aura:if>
            </div>
        </div>
    </aura:if>

</aura:component>
