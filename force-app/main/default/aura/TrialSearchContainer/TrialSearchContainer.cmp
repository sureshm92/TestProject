<aura:component description="TrialSearchContainer" implements="forceCommunity:availableForAllPageTypes"
                controller="TrialSearchContainerRemote" extends="c:LightningService">

    <ltng:require styles="{!join(',', $Resource.rr_community_css, $Resource.proximanova + '/proximanova.css')}"
                  scripts="{!join(',', $Resource.rr_community_js)}"
                  afterScriptsLoaded="{!c.doInit}"/>

    <aura:attribute name="trialTDOs" type="List"/>
    <aura:attribute name="taps" type="List"/>
    <aura:attribute name="participant" type="Participant__c" access="public"/>
    <aura:attribute name="formData" type="Object" access="public"/>

    <aura:handler name="updateSearchEvent" event="c:UpdateConditionsOfInterestSearchEvt" action="{!c.handleUpdateSearchEvent}"/>

    <c:RRSpinner aura:id="mainSpinner" showSpinner="true" size="medium" fixed="true"/>

    <lightning:layout horizontalAlign="center" class="width-limiter">
        <lightning:layoutItem smallDeviceSize="12" mediumDeviceSize="12" largeDeviceSize="8" flexibility="auto"
                              size="12" class="trials-side">
            <div class="sdv-top-bar" id="stickyBar" aura:id="stickyBar">
                <div class="navigation rr-width-limiter side-padding">
                    <c:RRNavigationPath>
                        <c:RRNPathItem label="{!$Label.c.Navigation_Home}" page=""/>
                        <c:RRNPathItem label="{!$Label.c.TrialSearch_Studies_you_may_be_interested_in}"/>
                    </c:RRNavigationPath>
                </div>
            </div>
            <div class="trials-container">
                <c:TrialsContainer trialTDOs="{!v.trialTDOs}" participant="{!v.participant}" formData="{!v.formData}"/>
            </div>

        </lightning:layoutItem>
        <lightning:layoutItem smallDeviceSize="12" mediumDeviceSize="12" largeDeviceSize="4" flexibility="auto"
                              size="12">
            <div class="filter-side">
                <c:ConditionsOfInterestView taps="{!v.taps}" participantId="{!v.participant.Id}"/>
            </div>

        </lightning:layoutItem>
    </lightning:layout>
</aura:component>