                                      maxWidth="250px"/>
                            <aura:set attribute="else">{!v.pe.Referral_Source__c}</aura:set>
                        </aura:if>
                    </div>-->
                </div>
                <div class="vpi-field">
                    <div class="label">{!$Label.c.PE_Referral_Id}</div>
                    <div class="value">{!v.pe.Name}</div>
                </div>

