<aura:component controller='CC_ParticipantSupportRemote' implements="forceCommunity:availableForAllPageTypes" access="global">
    <ltng:require scripts="{!join(',', $Resource.rr_community_js)}" afterScriptsLoaded="{!c.doInit}"/>
    <!-- CREATE ATTRIBUTE/VARIABLE-->
    <aura:attribute name="searchResult" type="Object"/>
    <aura:attribute name="searchKeyword" type="String"/>
    <aura:attribute name="parent" type="Aura.Component"/>
    <aura:attribute name="Message" type="boolean" default="false"/>
    <aura:attribute name="pe" type="Object" description="Participant enrollment item"/>
    <aura:attribute name="peobj" type="Object" description="Participant enrollment item"/>
    <aura:attribute name="isInvited" type="Boolean"/>
    <aura:attribute name="actions" type="Object" default="true" />
    <aura:attribute name="searchKey" type="String" access="public" /> 
    <aura:attribute name="count" type="Integer" default="0" />  
    <aura:attribute name="InviteStatus" type="Boolean" default="false" />
    
    <!-- Event handler -->
    <aura:handler name="callcenter" event="c:CallCenterRefresh" action="{!c.doRefreshtable}"/>
    
    <div class="vp-navigation" style="margin-top:10px;">
        <c:RRNavigationPath>
            <c:RRNPathItem label="{!$Label.c.CC_Participant_Support}"/>
        </c:RRNavigationPath>
    </div>
    <div>
        <div class="slds-grid slds-wrap" style="padding-bottom:18px;margin-top:35px;">
            <div class="slds-col slds-size--5-of-12 participantSearch">
                <div class="slds-form-element__control slds-input-has-icon slds-input-has-icon_left slds-icon-text-default">
                    <lightning:icon class="slds-icon slds-input__icon slds-input__icon_left slds-icon-text-default" iconName="utility:search" size="x-small"/>
                    <input class="slds-input" placeholder="{!$Label.c.CC_search_for_a_participant}" type="text" id="searchTxt" 
                           value="{!v.searchKeyword}" />
                </div>
            </div>
            <div class="slds-col slds-size--5-of-12 participantBtn">
                <lightning:button label="{!$Label.c.Library_Search}" onclick="{!c.doSearch}"/>
            </div>
        </div> 
        <div style="padding-bottom:15px;">
            {!$Label.c.Showing}&nbsp;{!v.count}&nbsp;{!$Label.c.Participant}
        </div>
        
        <!-- TABLE CONTENT-->
        <div class="rr-white-panel db-qal-container">
            <div class="db-qal-main">
                <div class="db-qal-items slds-grid slds-wrap">                    
                    <div class="slds-coll slds-size--4-of-12" ></div>
                    
                    <table class="slds-table slds-table_bordered slds-max-medium-table_stacked-horizontal slds-table_fixed-layout slds-float_right" >
                        <thead class="div-container">
                            <tr class="slds-line-height_reset">
                                <td>
                                    <div class="" scope="col">{!$Label.c.CC_Name}</div>
                                </td>
                                <td>
                                    <div class="" scope="col">{!$Label.c.CC_Phone_Number}</div>
                                </td>
                                <td>
                                    <div class="" scope="col">{!$Label.c.CC_Phone_Type}</div>
                                </td>
                                <td>
                                    <div class="" scope="col">{!$Label.c.CC_Study}</div>
                                </td>
                                <td>
                                    <div class="" scope="col">{!$Label.c.CC_PI_Name}</div>
                                </td>
                                <td>
                                    <div class="" scope="col">{!$Label.c.CC_Study_Site}</div>
                                </td>
                                <td>
                                    <div class="" scope="col">{!$Label.c.CC_Site_Contact}</div>
                                </td>
                                <td class="wraptext">
                                    <div class="" scope="col">{!$Label.c.CC_Site_Phone_Number}</div>
                                </td>
                                <td>
                                    <div class="" scope="col">{!$Label.c.CC_Received}</div>
                                </td>
                            </tr>
                        </thead>
                        <aura:iteration items="{!v.searchResult}" var="pe" indexVar="index">                   
                            <tr>                        
                                <td>
                                    <div class="slds-truncate wraptext" >
                                        <lightning:button class="align-left"
                                                          variant="base" name="{!index}"
                                                          value="{!pe.Participant__r.Id}" 
                                                          label="{!pe.Participant__r.Full_Name__c}" 
                                                          onclick="{!c.showEditParticipantInformation}"/>
                                    </div>
                                </td>
                                <td>
                                    <div class="slds-truncate wraptext"><span class="participantTitle">{!$Label.c.CC_Phone_Number}:</span>{!pe.Participant__r.Phone__c}</div>
                                </td>
                                <td>
                                    <div class="slds-truncate wraptext"><span class="participantTitle">{!$Label.c.CC_Phone_Type}:</span>{!pe.Participant__r.Phone_Type__c}</div>
                                </td>
                                <td>
                                    <div class="slds-truncate wraptext" >
                                        <span class="participantTitle">{!$Label.c.CC_Study}:</span>
                                        <lightning:button variant="base" class="align-left"
                                                          onclick="{!c.doNavigate}" name="{!index}"
                                                          label="{!pe.Clinical_Trial_Profile__r.Study_Code_Name__c}"/>  
                                    </div>
                                </td>
                                <td>
                                    <div class="slds-truncate wraptext"><span class="participantTitle">{!$Label.c.CC_PI_Name}:</span>{!pe.PI_Contact__r.Name}</div>
                                </td>
                                <td>
                                    <div class="slds-truncate wraptext"><span class="participantTitle">{!$Label.c.CC_Study_Site}:</span>{!pe.Study_Site__r.Name}</div>
                                </td>
                                <td>
                                    <div class="slds-truncate wraptext"><span class="participantTitle">{!$Label.c.CC_Site_Contact}:</span>{!pe.Participant_Contact__r.Name}</div>
                                </td>
                                <td>
                                    <div class="slds-truncate wraptext participantPhone"><span class="participantTitle">{!$Label.c.CC_Site_Phone_Number}:</span>{!pe.Study_Site__r.Study_Site_Phone__c}</div>
                                </td>
                                <td>
                                    <aura:if isTrue = "{!pe.Days_After_Referred__c lt 1}">

                                        <div class="slds-truncate wraptext"><span class="participantTitle">{!$Label.c.CC_Received}:</span>{!pe.Days_After_Referred__c}&nbsp; {!$Label.c.CC_Day_Ago}</div>
                                        <aura:set attribute="else">

                                            <div class="slds-truncate wraptext"><span class="participantTitle">{!$Label.c.CC_Received}:</span>{!pe.Days_After_Referred__c}&nbsp; {!$Label.c.CC_Days_Ago}</div>
                                        </aura:set>
                                    </aura:if>
                                </td>
                            </tr>
                        </aura:iteration>		
                    </table>  
                    
                    <c:Action_ParticipantInformation aura:id="OpenPatientInfoAction" NotCCMode="false"  isValid="true" isInvited="{!v.InviteStatus}" searchKey="{!v.searchKey}" />
                </div>
            </div>
        </div>
        
    </div>
</aura:component>