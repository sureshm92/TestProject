<aura:component description="ApproveLanguageIRB" controller="ApprovedLangRemote"
                implements="force:hasRecordId, flexipage:availableForAllPageTypes">

    <ltng:require scripts="{!$Resource.rr_community_js}" afterScriptsLoaded="{!c.doInit}"/>

    <!--attributes-->
    <aura:attribute name="initialized" type="Boolean" default="false"/>
    <aura:attribute name="filter" type="StudySiteFilter"/>
    <aura:attribute name="pagination" type="PaginationData"/>
    <aura:attribute name="ssItems" type="List"/>
    <aura:attribute name="languages" type="List"/>
    <aura:attribute name="haveEmptyAssigment" type="Boolean"/>

    <aura:attribute name="viewModePage" type="String"/>

    <aura:attribute name="countryFilterType" type="String" default="All"/>
    <aura:attribute name="langFilterType" type="String" default="All"/>
    <aura:attribute name="sitesFilterType" type="String" default="All"/>

    <!-- component body: -->
    <div class="panel">
        <c:RRSpinner aura:id="spinner"/>
        <aura:if isTrue="{!notequals(v.viewModePage, 'Disabled')}">
            <aura:set attribute="else">
                <c:EmptyListStub message="{!$Label.c.No_permission_Visits_tab}"/>
            </aura:set>
            <lightning:navigation aura:id="navLink"/>

            <aura:if isTrue="{!v.initialized}">
                <aura:if isTrue="{!not(empty(v.ssItems))}">
                    <!--Filters-->
                    <div class="slds-m-bottom--small">
                        <div class="slds-grid slds-gutters">
                            <!--Country Filter-->
                            <div class="slds-col slds-size--1-of-2">
                                <aura:if isTrue="{!equals(v.countryFilterType, 'All')}">
                                    <lightning:select label="Hidden" variant="label-hidden"
                                                      value="{!v.countryFilterType}"
                                                      onchange="{!c.whenCountryFilterChanged}">
                                        <option label="All Countries" value="All"></option>
                                        <option label="Selected Countries" value="filter"></option>
                                    </lightning:select>
                                    <aura:set attribute="else">
                                        <c:VisitResultSharingCountryLookup aura:id="countryLookup"
                                                                           value="{!v.filter.countryCodes}"
                                                                           isMultiEntry="true"
                                                                           onchange="{!c.onCountriesChange}"
                                                                           placeholder="Select country"
                                                                           placeholderSelected="Select another country"
                                                                           ctpId="{!v.recordId}" includeStates="false"
                                                                           isInclude="true"/>
                                    </aura:set>
                                </aura:if>
                            </div>
                            <!--Language Filter-->
                            <div class="slds-col slds-size--1-of-2">
                                <aura:if isTrue="{!equals(v.langFilterType, 'All')}">
                                    <lightning:select label="Hidden" variant="label-hidden" value="{!v.langFilterType}"
                                                      onchange="{!c.whenLangFilterChanged}">
                                        <option label="All Languages" value="All"></option>
                                        <option label="Selected Languages" value="filter"></option>
                                    </lightning:select>
                                    <aura:set attribute="else">
                                        <c:GlobalLanguagesLookup aura:id="langsLookup"
                                                                 value="{!v.filter.pageFeatureIds}"
                                                                 isMultiEntry="true"
                                                                 onchange="{!c.doUpdate}"
                                                                 placeholder="Select Language"
                                                                 placeholderSelected="Select another language"/>
                                    </aura:set>
                                </aura:if>
                            </div>
                        </div>
                        <div class="slds-grid slds-gutters">
                            <!--Study Site Filter-->
                            <div class="slds-col slds-size--1-of-2">
                                <aura:if isTrue="{!equals(v.sitesFilterType, 'All')}">
                                    <lightning:select label="Hidden" variant="label-hidden" value="{!v.sitesFilterType}"
                                                      onchange="{!c.whenSSFilterChanged}">
                                        <option label="All Study Sites" value="All"></option>
                                        <option label="Selected Study Sites" value="filter"></option>
                                    </lightning:select>
                                    <aura:set attribute="else">
                                        <c:IRBStudySitesLookup aura:id="ssLookup"
                                                               value="{!v.filter.selectedSSIds}"
                                                               ctpId="{!v.recordId}"
                                                               selectedCountries="{!v.filter.countryCodes}"
                                                               onchange="{!c.doUpdate}"
                                                               placeholder="Select Study Site"/>
                                    </aura:set>
                                </aura:if>
                            </div>
                            <!--Save changes button-->
                            <div class="slds-col slds-size--1-of-2 slds-p-left--small save-btn">
                                <aura:if isTrue="{!v.haveEmptyAssigment}">
                                    <lightning:icon iconName="utility:warning" alternativeText="Warning!"
                                                    variant="warning"
                                                    size="small"/>
                                    <p style="font-size: 11px; padding: 5px;">{!$Label.c.PP_IRB_SS_Empty_AppLAng}</p>
                                </aura:if>
                                <aura:if isTrue="{!equals(v.viewModePage, 'Edit')}">
                                    <lightning:button variant="brand" label="Save" onclick="{!c.doSaveAndUpdate}"/>
                                </aura:if>
                            </div>
                        </div>
                    </div>
                    <!--Study Site Table-->
                    <div class="slds-scrollable irb-table">
                        <table aria-multiselectable="true"
                               class="slds-table slds-table_cell-buffer slds-table_bordered" role="grid">
                            <thead>
                            <tr class="slds-line-height_reset">
                                <th scope="col">
                                    <div data-order="country" class="sorted-column" onclick="{!c.doSort}">
                                        <div class="slds-truncate slds-text-align--center">
                                            Country
                                        </div>
                                        <div class="slds-m-left--x-small">
                                            <aura:if isTrue="{!equals(v.filter.sortField, 'country')}">
                                                <lightning:icon
                                                        iconName="{!'utility:' + if(equals(v.filter.sortDirection, 'DESC'), 'arrowdown', 'arrowup')}"
                                                        alternativeText=""
                                                        variant="success"
                                                        size="xx-small"/>
                                            </aura:if>
                                        </div>
                                    </div>
                                </th>
                                <th scope="col">
                                    <div data-order="name" class="sorted-column" onclick="{!c.doSort}">
                                        <div class="slds-truncate slds-text-align--center">
                                            Study Site
                                        </div>
                                        <div class="slds-m-left--x-small">
                                            <aura:if isTrue="{!equals(v.filter.sortField, 'name')}">
                                                <lightning:icon
                                                        iconName="{!'utility:' + if(equals(v.filter.sortDirection, 'DESC'), 'arrowdown', 'arrowup')}"
                                                        alternativeText=""
                                                        variant="success"
                                                        size="xx-small"/>
                                            </aura:if>
                                        </div>
                                    </div>
                                </th>
                                <th class="cell-wrap" scope="col">
                                    <div data-order="number" class="sorted-column" onclick="{!c.doSort}">
                                        <div>Study Site Number</div>
                                        <div class="slds-m-left--x-small slds-align--absolute-center">
                                            <aura:if isTrue="{!equals(v.filter.sortField, 'number')}">
                                                <lightning:icon
                                                        iconName="{!'utility:' + if(equals(v.filter.sortDirection, 'DESC'), 'arrowdown', 'arrowup')}"
                                                        alternativeText=""
                                                        variant="success"
                                                        size="xx-small"/>
                                            </aura:if>
                                        </div>
                                    </div>
                                </th>
                                <aura:if isTrue="{!v.languages}">
                                    <aura:iteration items="{!v.languages}" var="lang">
                                        <th class="" scope="col">
                                            <div style="text-align: center;">{!lang.label}</div>
                                            <aura:if isTrue="{!equals(v.viewModePage, 'Edit')}">
                                                <div class="column-btn">
                                                    <a data-state="Enabled"
                                                       data-lang="{!lang.value}"
                                                       onclick="{!c.columnCheckboxStateChange}">Select All</a>
                                                    <span style="padding: 0 3px; color: #006DCC; ">|</span>
                                                    <a data-state="Disabled" data-lang="{!lang.value}"
                                                       onclick="{!c.columnCheckboxStateChange}">Clear All</a>
                                                </div>
                                            </aura:if>
                                        </th>
                                    </aura:iteration>
                                </aura:if>
                            </tr>
                            </thead>
                            <tbody>
                            <aura:if isTrue="{!v.ssItems}">
                                <aura:iteration items="{!v.ssItems}" var="item">
                                    <c:StudySiteItem item="{!item}" parent="{!this}" viewMode="{!v.viewModePage}"/>
                                </aura:iteration>
                            </aura:if>
                            </tbody>
                        </table>
                    </div>
                    <!--Pagination-->
                    <div>
                        <c:RRPaginationRemote entriesOnPage="{!v.pagination.pageRecordsCount}"
                                              currentPage="{!v.pagination.currentPage}"
                                              allRecordsCount="{!v.pagination.allRecordsCount}"
                                              onchange="{!c.doSaveAndUpdate}"/>
                        <div class="padding-info">
                            <lightning:icon class="slds-m-left--x-small" iconName="utility:save" alternativeText=""
                                            variant="warning" size="small"/>
                            <p style="font-size: 11px; padding: 5px;">{!$Label.c.IRB_Padding_Info}</p>
                        </div>
                    </div>
                </aura:if>
                <aura:if isTrue="{!empty(v.ssItems)}">
                    <c:EmptyListStub message="{!$Label.c.PG_VP_L_No_Items_display}"/>
                </aura:if>
            </aura:if>
        </aura:if>
    </div>
</aura:component>