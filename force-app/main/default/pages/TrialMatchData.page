<apex:page controller="TrialMatchDataController" renderAs="PDF">
    <apex:form >
        <apex:repeat value="{!tm_list}" var="trialMatch">
            <div style="height: auto;
                        width: auto;
                        overflow: hidden;
                        border: 1px solid #F2F2F2;
                        border-radius: 5px;
                        background-color: #FFFFFF;
                        box-shadow: 0 4px 4px 0 rgba(0, 0, 0, 0.04);
                        margin: 18px 18px 0 0;">
                <apex:outputPanel rendered="{!if(trialMatch.isEnrollingCTP , true ,false)}"> 
                <div style="height: 5px;
                            width: auto;
                            border-radius: 5px 5px 0 0;
                            background-color: #00C221;
                            box-shadow: 0 1px 2px 0 rgba(85, 85, 85, 0.15);"></div>
                </apex:outputPanel>
                <div style="padding: 15px;">
                    <div style=" white-space: nowrap;
                                overflow: hidden;
                                text-overflow: ellipsis;
                                font-family: Proxima Nova;
                                color: #000000;
                                float:left;
                                font-size: 14px;
                                line-height: 21px;
                                width: 70%">
                        {!$Label.TrialSearch_Therapeutic_area} : {!trialMatch.TherapeuticArea}
                    </div>
                    <div style="font-size: 14px;
                                float:right;
                                color: #000000;
                                font-family: Proxima Nova;
                                font-weight: 600;
                                line-height: 21px;">
                        {!trialMatch.EnrollingCTP}
                    </div>
                </div>
                <div style="padding-top: 15px;">
                    <div style="height: 1px;
                            width: auto;
                            border-radius: 5px 5px 0 0;
                            background: #e9e9e9;"></div>
                </div>
                
                <div style="padding: 15px;">
                    <div style="font-family: Proxima Nova;
                                color: #000000;
                                float:left;
                                font-weight: 600;
                                font-size: 20px;
                                line-height: 21px;
                                width: 70%
                                ">
                        {!trialMatch.StudyCodeName}
                    </div>
                    <div style="font-size: 14px;
                                float:right;
                                color: #000000;
                                font-family: Proxima Nova;
                                font-weight: 500;
                                line-height: 21px;">
                        {!$Label.Matched_of}&nbsp;{!trialMatch.matchDate}
                    </div>
                </div>
                <div style="padding: 15px;">
                    <div style="color: #000000;
                                float:left;
                                font-family: Proxima Nova;
                                font-size: 16px;
                                line-height: 24px;
                               ">
                        {!trialMatch.OfficialTitle}
                    </div>
                </div>
            </div>
        </apex:repeat>
    </apex:form>
</apex:page>