<aura:component description="ParticipantCardIsEmansipated">

    <!-- attributes: -->
    <aura:attribute name="pe" type="Object" access="public"/>
    <aura:attribute name="parent" type="Aura.Component" access="public"/>
    <aura:attribute name="userMode" type="String" access="public"/>
    <aura:attribute name="actions" type="Object"/>


    <!-- component body:-->
    <aura:if isTrue="{!v.pe.Participant__r.Emancipation_in_progress__c &amp;&amp; v.userMode == 'PI'}">
        <div class="alertBanner">
            <span style="font-weight: 600;"><img class="warning-icon" src="{!$Resource.icon_statusAlertOrange}"
                                                 width="16"
                                                 height="16"/> {!$Label.c.This_Participant_has_reached_legal_age_of_emancipation}</span>
            <aura:if isTrue="{!v.actions.addPatient.disabled}">
                <span style="padding: 0 16px"><a data-gtm="link_Verify_emancip" href="javascript:void(0);"
                                                 title="{!$Label.c.PG_MT_T_Your_permissions_do_not_permit_this_action}">{!$Label.c.BTN_Verify}</a></span>
                <aura:set attribute="else">
                <span style="padding: 0 16px"><a data-gtm="link_Verify_emancip" href="javascript:void(0);"
                                                 onclick="{!c.showParticipantEmansipationWizard}">{!$Label.c.BTN_Verify}</a></span>
                </aura:set>
            </aura:if>
        </div>
    </aura:if>

</aura:component>