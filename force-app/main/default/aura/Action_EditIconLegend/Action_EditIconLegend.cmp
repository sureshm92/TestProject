<aura:component description="Action_EditIconLegend">

    <aura:attribute name="planId" type="String"/>

    <aura:method name="execute" action="{!c.doExecute}">
        <aura:attribute name="planId" type="String"/>
        <aura:attribute name="callback" type="Function"/>
        <aura:attribute name="cancelCallback" type="Function"/>
    </aura:method>

    <c:uiModal aura:id="modal" size="medium" headerText="{!$Label.c.Edit_Visit_Legend}">
        <c:IconPlanetVisitInfoEdit aura:id="legend" planId="{!v.planId}"/>
        <aura:set attribute="footer">
            <lightning:button variant="neutral" type="button" name="editLegend" label="{!$Label.c.Visit_b_Close}"
                              onclick="{!c.cancelClick}"/>
            <lightning:button variant="brand" type="button" name="save" label="{!$Label.c.Visit_b_Save}"
                              onclick="{!c.saveClick}"/>
        </aura:set>
    </c:uiModal>

</aura:component>
