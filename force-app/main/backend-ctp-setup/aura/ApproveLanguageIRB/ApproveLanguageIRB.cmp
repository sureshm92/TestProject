<aura:component description="ApproveLanguageIRB" controller="ApprovedLangRemote"
                implements="force:hasRecordId, flexipage:availableForAllPageTypes">

    <ltng:require scripts="{!$Resource.rr_community_js}" afterScriptsLoaded="{!c.doInit}"/>

    <!--attributes-->
    <aura:attribute name="initialized" type="Boolean" default="false"/>
    <aura:attribute name="filter" type="StudySiteFilter"/>
    <aura:attribute name="pagination" type="PaginationData"/>
    <aura:attribute name="ssItems" type="List"/>
    <aura:attribute name="languages" type="List"/>
    <aura:attribute name="haveEmptyAssigment" type="Boolean"/>

    <aura:attribute name="viewModePage" type="String"/>
    <aura:attribute name="scrollLeft" type="Integer"/>

    <!-- component body: -->
    <div class="panel">
        <c:RRSpinner aura:id="spinner"/>
        <aura:if isTrue="{!notequals(v.viewModePage, 'Disabled')}">
            <aura:set attribute="else">
                <c:EmptyListStub message="{!$Label.c.No_permission_Visits_tab}"/>
            </aura:set>
            <lightning:navigation aura:id="navLink"/>

            <aura:if isTrue="{!v.initialized}">
                <aura:if isTrue="{!not(empty(v.ssItems))}">
                    <!--Filters-->
                    <div class="slds-m-bottom--small">
                        <div class="slds-grid slds-gutters slds-wrap">
                            <!--Country Filter-->
                            <div class="slds-col slds-size--1-of-2">
                                <c:VisitResultSharingCountryLookup aura:id="countryLookup"
                                                                   value="{!v.filter.countryCodes}"
                                                                   isMultiEntry="true"
                                                                   onchange="{!c.onCountriesChange}"
                                                                   placeholder="Select country"
                                                                   placeholderSelected="Select another country"
                                                                   ctpId="{!v.recordId}" includeStates="false"
                                                                   isInclude="true"/>
                            </div>
                            <!--Language Filter-->
                            <div class="slds-col slds-size--1-of-2">
                                <c:GlobalLanguagesLookup aura:id="langsLookup"
                                                         value="{!v.filter.pageFeatureIds}"
                                                         isMultiEntry="true"
                                                         onchange="{!c.doUpdate}"
                                                         placeholder="Select Language"
                                                         placeholderSelected="Select another language"/>
                            </div>
                            <!--Study Site Filter-->
                            <div class="slds-col slds-size--1-of-2">
                                <c:IRBStudySitesLookup aura:id="ssLookup"
                                                       value="{!v.filter.selectedSSIds}"
                                                       ctpId="{!v.recordId}"
                                                       selectedCountries="{!v.filter.countryCodes}"
                                                       onchange="{!c.doUpdate}"
                                                       placeholder="Select Study Site"/>
                            </div>
                            <!--Save changes button-->
                            <div class="slds-col slds-size--1-of-2 slds-p-left--small">
                                <div class="save-btn">
                                    <aura:if isTrue="{!v.haveEmptyAssigment}">
                                        <lightning:icon iconName="utility:warning" alternativeText="Warning!"
                                                        variant="warning"
                                                        size="small"/>
                                        <p style="font-size: 11px; padding: 5px;">{!$Label.c.PP_IRB_SS_Empty_AppLAng}</p>
                                    </aura:if>
                                </div>
                                <aura:if isTrue="{!equals(v.viewModePage, 'Edit')}">
                                    <div class="slds-text-align_right">
                                        <lightning:button variant="brand" label="Save" onclick="{!c.doSaveAndUpdate}"/>
                                    </div>
                                </aura:if>
                            </div>
                        </div>
                    </div>

                    <!--Study Site Table-->
                    <div class="irb-table">
                        <c:uiFixedTable class="slds-table slds-table_cell-buffer slds-table_bordered" scrollLeft="{!v.scrollLeft}">
                            <aura:set attribute="tableHeader">
                                <tr class="slds-line-height_reset">
                                    <c:SSTableHeaderCols filter="{!v.filter}" scrollLeft="{!v.scrollLeft}" onSort="{!c.doSort}"/>
                                    <aura:if isTrue="{!v.languages}">
                                        <aura:iteration items="{!v.languages}" var="lang">
                                            <c:uiCol isHeader="true" scrollLeft="{!v.scrollLeft}">
                                                <div style="text-align: center;">{!lang.label}</div>
                                                <aura:if isTrue="{!equals(v.viewModePage, 'Edit')}">
                                                    <div class="column-btn">
                                                        <a data-state="Enabled"
                                                           data-lang="{!lang.value}"
                                                           onclick="{!c.columnCheckboxStateChange}">Select All</a>
                                                        <span style="padding: 0 3px; color: #006DCC; ">|</span>
                                                        <a data-state="Disabled" data-lang="{!lang.value}"
                                                           onclick="{!c.columnCheckboxStateChange}">Clear All</a>
                                                    </div>
                                                </aura:if>
                                            </c:uiCol>
                                        </aura:iteration>
                                    </aura:if>
                                </tr>
                            </aura:set>
                            <aura:if isTrue="{!v.ssItems}">
                                <aura:iteration items="{!v.ssItems}" var="item">
                                    <c:StudySiteItem item="{!item}" parent="{!this}" viewMode="{!v.viewModePage}" scrollLeft="{!v.scrollLeft}"/>
                                </aura:iteration>
                            </aura:if>
                        </c:uiFixedTable>
                    </div>
                    <!--Pagination-->
                    <div>
                        <c:RRPaginationRemote entriesOnPage="{!v.pagination.pageRecordsCount}"
                                              currentPage="{!v.pagination.currentPage}"
                                              allRecordsCount="{!v.pagination.allRecordsCount}"
                                              onchange="{!c.doSaveAndUpdate}"/>
                        <div class="padding-info">
                            <lightning:icon class="slds-m-left--x-small" iconName="utility:save" alternativeText=""
                                            variant="warning" size="small"/>
                            <p style="font-size: 11px; padding: 5px;">{!$Label.c.IRB_Padding_Info}</p>
                        </div>
                    </div>
                </aura:if>
                <aura:if isTrue="{!empty(v.ssItems)}">
                    <c:EmptyListStub message="{!$Label.c.PG_VP_L_No_Items_display}"/>
                </aura:if>
            </aura:if>
        </aura:if>
    </div>
</aura:component>