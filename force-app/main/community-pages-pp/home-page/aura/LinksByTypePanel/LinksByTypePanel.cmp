<aura:component description="LinksByTypePanel">
    <aura:attribute name="linksWrapper" type="Object"/>


    <div class="sv-panel rr-white-panel" data-gtm="PNL_RelevantLinks">
        <div class="sv-header">
            <div class="sv-title">{!v.linksWrapper.type}</div>
        </div>
        <div class="sv-body">
            <aura:iteration var="link" items="{!v.linksWrapper.resources}">
                <div class="link-container">
                    <c:RRLink href="{!link.URL__c}" label="{!link.Title__c}" target="_blank" class="link" dataGTM="LNK_Resource"/>
                </div>
            </aura:iteration>
            <c:EmptyListStub targetList="{!v.linksWrapper.resources}" iconName="none" message="{!$Label.c.PG_VP_L_No_Items_display}"/>
        </div>
    </div>
</aura:component>
