<aura:component description="VendorsTable">

    <aura:attribute name="vendors" type="Object[]"/>
    <aura:attribute name="hasDefault" type="Boolean"/>
    <aura:attribute name="selectedVendor" type="Object"/>

    <div class="slds-scrollable--y vendor-table">
        <c:RRTable>
            <tbody>
            <aura:iteration var="vendor" items="{!v.vendors}" indexVar="ind">
                <tr>
                    <td data-ind="{!vendor.Link_Vendor__c}">
                        <div class="vendor-row">
                            <lightning:input aura:id="checkBoxBtn" type="checkbox" label=""
                                             onchange="{!c.makeUnique}" value="{!vendor}"/>
                            <div class="slds-text-align--left">
                                <p class="vendor-name" title="{!vendor.Name}">{!vendor.Name}</p>
                            </div>
                        </div>
                    </td>
                </tr>
            </aura:iteration>
            </tbody>
        </c:RRTable>
    </div>
</aura:component>
