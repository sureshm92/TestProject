<aura:component description="RRIconSplitter">

    <!--attributes-->
    <aura:attribute name="value" type="String"/>
    <aura:attribute name="class" type="String" description="CSS classname for the SVG element"/>
    <aura:attribute name="numOfIconsToDisplay" type="Integer" default="0"/>
    <aura:attribute name="icons" type="List" access="public"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <div class="icons">
        <aura:iteration items="{!v.icons}" var="icon">
            <c:RRIcon resource="{!$Resource.Icons_legend}" iconName="{!icon}" class="{!'icon-item ' + v.class}" color="black"/>
        </aura:iteration>
        <aura:if isTrue="{!v.numOfIconsToDisplay != 0}">
            <div class="dots">...</div>
        </aura:if>
    </div>

</aura:component>