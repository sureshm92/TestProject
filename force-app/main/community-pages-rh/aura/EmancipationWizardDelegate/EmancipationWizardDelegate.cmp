<aura:component description="EmancipationWizardDelegate" controller="ParticipantInformationRemote">

    <aura:attribute name="delegateItem" type="Object"/>
    <aura:attribute name="index" type="Integer"/>
    <aura:attribute name="parent" type="Aura.Component"/>
    <aura:attribute name="actionDisabled" type="Boolean" default="false"/>
    <aura:attribute name="isValid" type="Boolean" default="false"/>
    <aura:attribute name="isDuplicate" type="Boolean" default="false"/>


    <c:RRSpinner aura:id="spinner" size="medium"/>

    <div class="slds-grid slds-wrap slds-size--1-of-1 healthcare-form-container">
        <div class="rr-form-element slds-col slds-size--3-of-12" style="margin-top: 10px;">
            <div class="label">
                {!$Label.c.PG_AS_F_Email_address}<abbr title="required" class="slds-required">*</abbr>
            </div>
            <lightning:input class="healthcare-input" type="text" required="true" aura:id="delEmail"
                             value="{!v.delegateItem.Email__c}"
                             onblur="{!c.checkContact}"
                             onchange="{!c.checkFields}"
                             disabled="{!v.delegateItem.Contact__c}"/>
        </div>
        <div class="rr-form-element slds-col slds-size--3-of-12">
            <div class="label">
                {!$Label.c.PG_AS_F_First_name}<abbr title="required" class="slds-required">*</abbr>
            </div>
            <lightning:input class="healthcare-input" type="text" required="true" aura:id="delFirstName"
                             value="{!v.delegateItem.First_Name__c}"
                             onchange="{!c.checkFields}"
                             disabled="{!v.delegateItem.Contact__c}"/>
        </div>
        <div class="rr-form-element slds-col slds-size--3-of-12">
            <div class="label">
                {!$Label.c.PG_AS_F_Last_name}<abbr title="required" class="slds-required">*</abbr>
            </div>
            <lightning:input class="healthcare-input" type="text" required="true" aura:id="delLastName"
                             value="{!v.delegateItem.Last_Name__c}"
                             onchange="{!c.checkFields}"
                             disabled="{!v.delegateItem.Contact__c}"/>
        </div>
        <div class="rr-form-element slds-col slds-size--3-of-12">
            <button class="apollo-btn secondary slds-button" onclick="{!c.doConnect}"
                    disabled="{!(!v.isValid || v.isDuplicate)}"
                    title="{!v.isDuplicate ? $Label.c.HealCare_Provider_Already_Connected : ''}">
                {!v.delegateItem.isConnected ? $Label.c.HealthCare_Provider_Stop_Sharing : $Label.c.HealthCare_Provider_Connect}
            </button>
        </div>
    </div>

</aura:component>
